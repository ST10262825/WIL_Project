@model List<TutorConnect.WebApp.Models.TutorDTO>
@using TutorConnect.WebApp.Models

<h2>Browse Tutors</h2>

<form method="get" asp-action="BrowseTutors" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by name or module..." />
    </div>

    <div class="col-md-4">
        <select name="moduleId" class="form-select">
            <option value="">-- All Modules --</option>
            @foreach (var module in ViewBag.Modules as List<ModuleDTO>)
            {
                <option value="@module.ModuleId" selected="@(ViewBag.ModuleId != null && ViewBag.ModuleId == module.ModuleId)">
                    @module.Name (@module.Code)
                </option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Bio</th>
                <th>Modules</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tutor in Model)
            {
                <tr>
                    <td>@tutor.Name @tutor.Surname</td>
                    <td>@tutor.Phone</td>
                    <td>@tutor.Bio</td>
                    <td>
                        @foreach (var module in tutor.Modules)
                        {
                            <span class="badge bg-primary">@module.Name</span>
                        }
                    </td>
                    <td>
                        @foreach (var module in tutor.Modules)
                        {
                            <span class="badge bg-primary">@module.Name</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Student" asp-action="BookSession" asp-route-tutorId="@tutor.TutorId" class="btn btn-success btn-sm">
                            Book Session
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tutors found.</p>
}
