                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    } *@
    

    <!-- Recent Materials -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recent Materials</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Tutor</th>
                                        <th>Type</th>
                                        <th>Size</th>
                                        <th>Uploaded</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var material in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@material.Title</strong>
                                                    <br>
                                                    <small class="text-muted">@material.Description</small>
                                                </div>
                                            </td>
                                            <td>@material.TutorName</td>
                                            <td>
                                                <span class="badge bg-secondary">@material.FileType.ToUpper()</span>
                                                @if (material.IsPublic)
                                                {
                                                    <span class="badge bg-success">Public</span>
                                                }
                                            </td>
                                            <td>@material.FileSizeFormatted</td>
                                            <td>@material.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@material.FileUrl" class="btn btn-outline-primary btn-sm" target="_blank">
                                                    <i class="fas fa-download"></i> Download
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No learning materials available yet.</p>
                            <p class="text-muted">Book sessions with tutors to access their learning materials.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>