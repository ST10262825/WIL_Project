@model List<LearningMaterialDTO>
@{
    ViewData["Title"] = "My Learning Materials";
    var overview = ViewBag.MaterialsOverview as StudentMaterialsOverviewDTO;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-book me-2"></i>My Learning Materials</h2>
            <p class="text-muted">Access learning materials from tutors you've completed sessions with</p>
        </div>
    </div>

    <div class="alert alert-info">
        <h6><i class="fas fa-info-circle me-2"></i>Access Information</h6>
        <p class="mb-0">You can access learning materials from tutors when:</p>
        <ul class="mb-0">
            <li>Your booking is <strong>Accepted</strong></li>
            <li>Up to <strong>2 days after session completion</strong></li>
            <li>Materials are marked as <strong>Public</strong> (available to all students)</li>
        </ul>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-file fa-2x mb-3 text-primary"></i>
                    <h3 class="card-title">@(overview?.TotalMaterials ?? 0)</h3>
                    <p class="card-text text-muted">Total Materials</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-chalkboard-teacher fa-2x mb-3 text-success"></i>
                    <h3 class="card-title">@(overview?.TotalTutors ?? 0)</h3>
                    <p class="card-text text-muted">Tutors</p>
                </div>
            </div>
        </div>
    </div>

