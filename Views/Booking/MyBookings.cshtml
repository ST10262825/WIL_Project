@model List<TutorConnect.WebApp.Models.BookingDTO>
@using TutorConnect.WebApp.Services
@inject ApiService ApiService
@{
    ViewData["Title"] = "My Bookings";

    // NEW: Get gamification profile
    var profile = await ApiService.GetGamificationProfileAsync();
}

<div class="container mt-4">
    <!-- NEW: Gamification Header -->
    @if (profile != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #0B2E3D, #3BB2B8);">
                    <div class="card-body text-white">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="mb-2">🎮 Your Learning Journey</h4>
                                <div class="d-flex align-items-center mb-2">
                                    <div class="level-badge me-3"
                                         style="width: 60px; height: 60px; background: #42E695; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; font-weight: bold;">
                                        @profile.Level
                                    </div>
                                    <div>
                                        <h5 class="mb-0">Level @profile.Level - @profile.CurrentRank</h5>
                                        <p class="mb-0">@profile.ExperiencePoints XP • 🔥 @profile.StreakCount day streak</p>
                                    </div>
                                </div>
                                <div class="progress" style="height: 10px; background: rgba(255,255,255,0.3);">
                                    <div class="progress-bar"
                                         style="width: @(profile.LevelProgress * 100)%; background: #42E695;"
                                         role="progressbar"
                                         aria-valuenow="@(profile.LevelProgress * 100)"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                    </div>
                                </div>
                                <small class="mt-1 d-block">@profile.PointsToNextLevel XP to level @(profile.Level + 1)</small>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="achievement-count">
                                    <i class="fas fa-trophy fa-2x mb-2" style="color: #FFD700;"></i>
                                    <h5>@profile.Achievements.Count(a => a.IsCompleted)</h5>
                                    <small>Achievements Unlocked</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Success Message with Gamification -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-trophy me-2 fa-lg"></i>
                <div>
                    <h6 class="mb-1">🎉 Achievement Unlocked!</h6>
                    <p class="mb-0">@TempData["Success"]</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #0B2E3D;">My Bookings</h2>
        <a href="/Tutor/Browse" class="btn" style="background-color: #42E695; color: #0B2E3D; border-radius: 30px;">
            <i class="fas fa-plus me-2"></i>Book New Session
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 shadow-sm text-center py-5">
            <div style="height: 8px; background: linear-gradient(90deg, #42E695, #3BB2B8);"></div>
            <div class="card-body">
                <i class="fas fa-calendar-xmark" style="font-size: 3rem; color: #3BB2B8;"></i>
                <h4 class="mt-3" style="color: #0B2E3D;">No Bookings Yet</h4>
                <p class="text-muted">You haven't made any bookings yet. Book your first session to start earning points and achievements!</p>
                <!-- NEW: Show points incentive -->
                @if (profile != null)
                {
                    <div class="alert alert-info mx-auto" style="max-width: 400px;">
                        <i class="fas fa-star me-2"></i>
                        <strong>Earn 50 XP</strong> for each completed session!
                    </div>
                }
                <a href="/Tutor/Browse" class="btn" style="background-color: #0B2E3D; color: white; border-radius: 30px;">
                    Browse Tutors
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model.OrderByDescending(b => b.StartTime))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div style="height: 8px; background: linear-gradient(90deg, #42E695, #3BB2B8);"></div>
                        <div class="card-body">
                            <!-- Status Badge -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge @GetStatusBadgeClass(booking.Status)">
                                    @booking.Status
                                </span>
                                <small class="text-muted">#@booking.BookingId</small>
                            </div>

                            <!-- Tutor Info -->
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 50px; height: 50px; background-color: #3BB2B8; color: white;">
                                        <i class="fas fa-user-graduate"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-0" style="color: #0B2E3D;">@booking.TutorName</h6>
                                    <small class="text-muted">Tutor</small>
                                </div>
                            </div>

                            <!-- Booking Details -->
                            <div class="booking-details">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Module:</span>
                                    <strong style="color: #0B2E3D;">@booking.ModuleName</strong>
                                </div>

                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Date:</span>
                                    <strong>@booking.StartTime.ToString("MMM dd, yyyy")</strong>
                                </div>

                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Time:</span>
                                    <strong>@booking.StartTime.ToString("hh:mm tt") - @booking.EndTime.ToString("hh:mm tt")</strong>
                                </div>

                                <!-- NEW: Points Indicator for Completed Sessions -->
                                @if (booking.Status == "Completed")
                                {
                                    <div class="completed-session-badge mt-2 p-2 text-center"
                                         style="background: #E8F5E8; border-radius: 8px; border: 1px solid #42E695;">
                                        <i class="fas fa-star text-warning me-1"></i>
                                        <small class="text-success">
                                            <strong>+50 XP</strong> earned
                                        </small>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(booking.Notes))
                                {
                                    <div class="mt-3">
                                        <small class="text-muted">Notes:</small>
                                        <p class="mb-0 small">@booking.Notes</p>
                                    </div>
                                }
                            </div>

                            <!-- Actions -->
                            <div class="mt-3 pt-3 border-top">
                                @if (booking.Status == "Pending")
                                {
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-danger w-100"
                                                onclick="cancelBooking(@booking.BookingId)">
                                            <i class="fas fa-times me-1"></i>Cancel
                                        </button>
                                    </div>
                                }
                                else if (booking.Status == "Accepted" || booking.Status == "Confirmed")
                                {
                                    <div class="text-center">
                                        @if (booking.StartTime <= DateTime.Now)
                                        {
                                            <!-- NEW: Complete Session Button with Gamification -->
                                            <form method="post" action="@Url.Action("CompleteSession", "Booking", new { bookingId = booking.BookingId })" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-success btn-sm w-100">
                                                    <i class="fas fa-check me-1"></i>Complete Session
                                                </button>
                                            </form>
                                            <small class="d-block text-muted mt-1">Complete to earn <strong>50 XP</strong></small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Confirmed
                                            </span>
                                            <small class="d-block text-muted mt-1">Session is confirmed</small>
                                        }
                                    </div>
                                }
                                else if (booking.Status == "Completed")
                                {
                                    <div class="text-center">
                                        <span class="badge bg-info">
                                            <i class="fas fa-trophy me-1"></i>Completed
                                        </span>
                                        <small class="d-block text-muted mt-1">Points awarded! 🎉</small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- NEW: Quick Stats Section -->
        @if (profile != null)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 style="color: #0B2E3D;">📊 Your Learning Stats</h5>
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <h4 class="text-primary">@Model.Count(b => b.Status == "Completed")</h4>
                                    <small class="text-muted">Sessions Completed</small>
                                </div>
                                <div class="col-md-3">
                                    <h4 class="text-success">@(Model.Count(b => b.Status == "Completed") * 50)</h4>
                                    <small class="text-muted">XP from Sessions</small>
                                </div>
                                <div class="col-md-3">
                                    <h4 class="text-warning">@Model.Count(b => b.Status == "Pending")</h4>
                                    <small class="text-muted">Pending Sessions</small>
                                </div>
                                <div class="col-md-3">
                                    <h4 class="text-info">@Model.Count(b => b.Status == "Confirmed" || b.Status == "Accepted")</h4>
                                    <small class="text-muted">Upcoming Sessions</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        function cancelBooking(bookingId) {
            if (confirm('Are you sure you want to cancel this booking?')) {
                fetch(`/api/bookings/update-status/${bookingId}?status=Declined`, {
                    method: 'PUT'
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to cancel booking. Please try again.');
                    }
                })
                .catch(error => {
                    alert('Error cancelling booking: ' + error);
                });
            }
        }

        // NEW: Show celebration for completed sessions
        function showCompletionCelebration() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('completed') === 'true') {
                // You can add confetti or other celebrations here
                console.log('Session completed! 🎉');
            }
        }

        // Call on page load
        document.addEventListener('DOMContentLoaded', function() {
            showCompletionCelebration();
        });

        // Auto-refresh page every 30 seconds to update statuses
        setInterval(() => {
            location.reload();
        }, 30000);
    </script>
}

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Accepted" => "bg-success",
            "Confirmed" => "bg-success",
            "Declined" => "bg-danger",
            "Completed" => "bg-info",
            _ => "bg-secondary"
        };
    }
}

<style>
    .booking-details {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        border-left: 4px solid #3BB2B8;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .badge {
        font-size: 0.8rem;
        padding: 0.5rem 0.75rem;
        border-radius: 20px;
    }

    /* NEW: Gamification Styles */
    .level-badge {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .completed-session-badge {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    .achievement-count {
        text-align: center;
    }
</style>