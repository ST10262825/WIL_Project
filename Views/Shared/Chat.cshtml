        gap: 4px;
    }

    .message.received .message-time {
        text-align: left;
        color: #667781;
        justify-content: flex-start;
    }

    .chat-input-container {
        background: white;
        padding: 15px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        border-top: 1px solid #e4e6ea;
    }

    /* NEW: Attachment button */
    .attachment-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: transparent;
        border: none;
        color: #667781;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .attachment-btn:hover {
            background: #f0f2f5;
            color: #00a884;
        }

    .chat-input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid #e4e6ea;
        border-radius: 24px;
        font-size: 14px;
