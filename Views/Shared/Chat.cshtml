                    <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z" />
                </svg>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const currentUserId = parseInt('@currentUserId');
        const authToken = '@authToken';
        const MAX_MESSAGE_LENGTH = 1000;

        let selectedReceiverId = null;
        let selectedUserName = '';
        let connection = null;
        let reconnectAttempts = 0;
        let isUserScrolling = false;

        // NEW: Toast notification system
        function showToast(message, type = 'info') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;

            const icon = type === 'success' ? '✓' : type === 'error' ? '✗' : 'ℹ';
            toast.innerHTML = `
                <span style="font-size: 20px;">${icon}</span>
                <span>${message}</span>
            `;

            container.appendChild(toast);

            setTimeout(() => {
                toast.style.animation = 'slideOut 0.3s ease-out';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // NEW: Connection status management
        function updateConnectionStatus(status) {
            const statusEl = document.getElementById('connectionStatus');
            const offlineOverlay = document.getElementById('offlineOverlay');

            statusEl.className = `connection-status ${status}`;

            if (status === 'connected') {
                statusEl.title = 'Connected';
                offlineOverlay.classList.remove('show');
            } else if (status === 'disconnected') {
                statusEl.title = 'Disconnected';
                offlineOverlay.classList.add('show');
            } else if (status === 'connecting') {
                statusEl.title = 'Connecting...';
            }
        }

        // Initialize SignalR with enhanced error handling
        async function initializeSignalR() {
            try {
                updateConnectionStatus('connecting');

                connection = new signalR.HubConnectionBuilder()
                    .withUrl("https://localhost:44374/chatHub", {
                        accessTokenFactory: () => authToken
                    })
                    .withAutomaticReconnect({
                        nextRetryDelayInMilliseconds: retryContext => {
                            if (retryContext.elapsedMilliseconds < 60000) {
                                return Math.random() * 10000;
                            } else {
                                return null;
                            }
                        }
                    })
                    .build();

                connection.on("ReceiveMessage", (chatMessage) => {
                    appendMessage(chatMessage.senderId, chatMessage.message, chatMessage.sentAt);
                    updateSidebarConversation(chatMessage.senderId, chatMessage.message, chatMessage.sentAt, true);

                    // NEW: Play sound notification
                    if (chatMessage.senderId !== currentUserId) {
                        playNotificationSound();
                        if (document.hidden) {
                            showDesktopNotification(chatMessage.senderName || 'New message', chatMessage.message);
                        }
                    }
                });

                connection.on("LoadChatHistory", (messages) => {
                    displayChatHistory(messages);
                });

                connection.on("UpdateUnreadCount", (unreadCount, senderId) => {
                    updateUnreadBadge(senderId, unreadCount);
                });

                // NEW: Typing indicator support
                connection.on("UserTyping", (userId, isTyping) => {
                    if (userId === selectedReceiverId) {
                        showTypingIndicator(isTyping);
                    }
                });

                connection.onreconnecting(() => {
                    updateConnectionStatus('connecting');
                    showToast('Reconnecting...', 'info');
                });

                connection.onreconnected(() => {
                    updateConnectionStatus('connected');
                    showToast('Reconnected successfully!', 'success');
                    reconnectAttempts = 0;
                });

                connection.onclose(() => {
                    updateConnectionStatus('disconnected');
                    showToast('Connection lost. Click reconnect to try again.', 'error');
                });

                await connection.start();
                updateConnectionStatus('connected');
                console.log('SignalR connected successfully');

            } catch (err) {
                console.error('SignalR connection failed:', err);
                updateConnectionStatus('disconnected');
                showToast('Failed to connect. Please refresh the page.', 'error');
            }
        }

