        backdrop-filter: blur(4px);
    }

        .offline-overlay.show {
            display: flex;
        }

    .offline-message {
        background: white;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
        max-width: 400px;
    }

        .offline-message h3 {
            color: #ef4444;
            margin-bottom: 10px;
        }

        .offline-message p {
            color: #6b7280;
            margin-bottom: 20px;
        }

    .retry-btn {
        background: #00a884;
        color: white;
        border: none;
        padding: 10px 24px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
    }

        .retry-btn:hover {
