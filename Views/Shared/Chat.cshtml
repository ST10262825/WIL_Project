        color: #111b21;
        margin-bottom: 2px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .last-message {
        font-size: 13px;
        color: #667781;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%; /* NEW: Better constraint */
    }

    .unread-badge {
        background: #00a884;
        color: white;
        border-radius: 50%;
        min-width: 20px;
        height: 20px;
