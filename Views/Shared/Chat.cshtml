    }

    .chat-header-info .status {
        font-size: 13px;
        color: #667781;
        margin-top: 2px;
    }

    /* NEW: Typing indicator in header */
    .status.typing {
        color: #00a884;
        font-weight: 500;
    }

    .chat-window {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
