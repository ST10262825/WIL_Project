        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        margin-right: 15px;
        font-size: 18px;
    }

    .user-info {
        flex: 1;
    }

    .user-name {
        font-weight: 500;
        color: #111b21;
