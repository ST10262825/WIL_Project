<!-- NEW: Toast container -->
<div class="toast-container" id="toastContainer"></div>

<div class="chat-container">
    <!-- Sidebar -->
    <div class="chat-sidebar" id="chatSidebar">
        <div class="sidebar-header">
            <div style="display: flex; align-items: center; gap: 10px;">
                <button class="mobile-back-btn" onclick="toggleSidebar()">&larr;</button>
                💬 Messages
            </div>
            <div class="connection-status" id="connectionStatus" title="Connected"></div>
        </div>

        <div class="search-container">
            <input type="text" class="search-input" id="userSearch" placeholder="Search conversations..." />
        </div>

        <div class="user-list" id="userList">
            <!-- Loading skeleton -->
            <div class="user-item skeleton">
                <div class="skeleton-avatar"></div>
                <div class="user-info">
                    <div class="skeleton-text" style="width: 60%;"></div>
