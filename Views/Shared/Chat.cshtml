        display: flex;
        flex-direction: column;
        scroll-behavior: smooth;
    }

    .message {
        max-width: 70%;
        margin-bottom: 12px;
        position: relative;
        animation: messageSlide 0.3s ease-out;
    }

    @@keyframes messageSlide {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .message.sent {
        align-self: flex-end;
