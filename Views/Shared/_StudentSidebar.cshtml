@{
    var student = ViewBag.Student as TutorConnect.WebApp.Models.StudentDTO;
    int pendingReviewsCount = ViewBag.PendingReviewsCount ?? 0;
}

<div class="sidebar">
    <div class="p-4 text-center">
        <div class="image-upload">
            <img src="@(student?.ProfileImage ?? "/images/student2.jpeg")" alt="Profile" class="profile-image">
        </div>
        <h5 class="mt-3 mb-1">@(student?.Name ?? "Student")</h5>
        <p class="text-muted mb-0">@(student?.Bio ?? "Student")</p>
    </div>
    <ul class="sidebar-menu">
        <li>
            <a href="@Url.Action("Dashboard", "Student")" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Tutor")">
                <i class="fas fa-search"></i> Find Tutors
            </a>
        </li>
        <li>
            <a href="@Url.Action("MySessions", "Student")">
                <i class="fas fa-calendar-alt"></i> My Sessions
            </a>
        </li>
        <li>
            <a href="@Url.Action("Reviews", "Student")">
                <i class="fas fa-star"></i> Rate Tutors
                @if (pendingReviewsCount > 0)
                {
                    <span class="badge bg-danger rounded-pill ms-auto">@pendingReviewsCount</span>
                }
            </a>
        </li>
        <li>
            <a href="@Url.Action("Chat", "Tutor")">
                <i class="fas fa-comment-dots"></i> Messages
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-book"></i> Learning Materials
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-cog"></i> Settings
            </a>
        </li>
    </ul>
</div>