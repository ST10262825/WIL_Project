@model CreateTutorDTO
@{
    var modules = ViewBag.Modules as List<ModuleDTO>;
    var courses = ViewBag.Courses as List<CourseDTO>;
}
<h2>Create Tutor</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Errors != null)
{
    <ul class="text-danger">
        @foreach (var err in ViewBag.Errors)
        {
            <li>@err</li>
        }
    </ul>
}
<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Surname</label>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Course *</label>
        <select asp-for="CourseId" id="courseSelect" class="form-control" required>
            <option value="">-- Select Course --</option>
            @if (courses != null)
            {
                foreach (var course in courses)
                {
                    <option value="@course.CourseId">@course.Title</option>
                }
            }
        </select>
        <small class="form-text text-muted">Select the course this tutor will teach under</small>
    </div>

    <div class="form-group">
        <label>Bio</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Modules *</label><br />
        <div id="modulesList">
            @if (modules != null && modules.Any())
            {
                foreach (var module in modules)
                {
                    <div class="form-check form-check-inline module-item" data-course-id="@module.CourseId" style="display: none;">
                        <input class="form-check-input module-checkbox" type="checkbox" name="ModuleIds" value="@module.ModuleId" id="module_@module.ModuleId" />
                        <label class="form-check-label" for="module_@module.ModuleId">@module.Code - @module.Name</label>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    No modules available. Please create modules first in the Modules management section.
                </div>
            }
        </div>
        <div id="noModulesMessage" class="alert alert-info" style="display: none;">
            Please select a course to see available modules.
        </div>
        <div id="noModulesForCourse" class="alert alert-warning" style="display: none;">
            No modules available for the selected course.
        </div>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-success">Create Tutor</button>
        <a asp-action="Tutors" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const courseSelect = document.getElementById('courseSelect');
            const moduleItems = document.querySelectorAll('.module-item');
            const noModulesMessage = document.getElementById('noModulesMessage');
            const noModulesForCourse = document.getElementById('noModulesForCourse');
            const modulesList = document.getElementById('modulesList');

            // Show "select a course" message initially
            if (moduleItems.length > 0) {
                noModulesMessage.style.display = 'block';
            }

            // Filter modules when course is selected
            courseSelect.addEventListener('change', function() {
                const selectedCourseId = this.value;

                // Uncheck all modules when course changes
                document.querySelectorAll('.module-checkbox').forEach(cb => cb.checked = false);

                if (selectedCourseId === '') {
                    // No course selected - hide all modules
                    moduleItems.forEach(item => item.style.display = 'none');
                    noModulesMessage.style.display = 'block';
                    noModulesForCourse.style.display = 'none';
                } else {
                    // Show only modules for selected course
                    let hasModules = false;
                    moduleItems.forEach(item => {
                        if (item.dataset.courseId === selectedCourseId) {
                            item.style.display = 'inline-block';
                            hasModules = true;
                        } else {
                            item.style.display = 'none';
                        }
                    });

                    // Show appropriate message
                    noModulesMessage.style.display = 'none';
                    noModulesForCourse.style.display = hasModules ? 'none' : 'block';
                }
            });

            // Form validation
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const courseValue = courseSelect.value;

                if (courseValue === '') {
                    e.preventDefault();
                    alert('Please select a course for the tutor.');
                    courseSelect.focus();
                    return;
                }

                const moduleCheckboxes = document.querySelectorAll('input[name="ModuleIds"]:checked');
                if (moduleCheckboxes.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one module for the tutor.');
                    return;
                }
            });
        });
    </script>
}