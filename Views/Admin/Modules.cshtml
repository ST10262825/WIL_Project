@model List<ModuleDTO>
@{
    ViewData["Title"] = "Manage Modules";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Manage Modules</h1>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModuleModal">
            <i class="fas fa-plus"></i> Add Module
        </button>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="text-center py-4">
                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No modules found.</p>
                    <p class="text-muted small">Click the 'Add Module' button to create your first module.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Tutors</th>
                                <th>Bookings</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var module in Model)
                            {
                                <tr>
                                    <td><strong>@module.Code</strong></td>
                                    <td>@module.Name</td>
                                    <td>
                                        <span class="badge bg-primary">@module.TutorCount tutor@(module.TutorCount != 1 ? "s" : "")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@module.BookingCount booking@(module.BookingCount != 1 ? "s" : "")</span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-primary edit-module-btn"
                                                    data-module-id="@module.ModuleId"
                                                    data-module-code="@module.Code"
                                                    data-module-name="@module.Name">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <form asp-action="DeleteModule" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@module.ModuleId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Are you sure you want to delete this module? This cannot be undone.');">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Module Modal -->
<div class="modal fade" id="createModuleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Module</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateModule" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="createCode" class="form-label">Module Code *</label>
                        <input type="text" class="form-control" id="createCode" name="Code" required
                               placeholder="e.g., MAT101" maxlength="20">
                    </div>
                    <div class="mb-3">
                        <label for="createName" class="form-label">Module Name *</label>
                        <input type="text" class="form-control" id="createName" name="Name" required
                               placeholder="e.g., Mathematics 101" maxlength="100">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Module</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Module Modal -->
<div class="modal fade" id="editModuleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Module</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditModule" method="post">
                <input type="hidden" id="editModuleId" name="id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editCode" class="form-label">Module Code *</label>
                        <input type="text" class="form-control" id="editCode" name="Code" required
                               maxlength="20">
                    </div>
                    <div class="mb-3">
                        <label for="editName" class="form-label">Module Name *</label>
                        <input type="text" class="form-control" id="editName" name="Name" required
                               maxlength="100">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Module</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-dismiss alerts
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);

            // Edit module functionality
            const editModal = new bootstrap.Modal(document.getElementById('editModuleModal'));

            document.querySelectorAll('.edit-module-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const moduleId = this.dataset.moduleId;
                    const moduleCode = this.dataset.moduleCode;
                    const moduleName = this.dataset.moduleName;

                    document.getElementById('editModuleId').value = moduleId;
                    document.getElementById('editCode').value = moduleCode;
                    document.getElementById('editName').value = moduleName;

                    editModal.show();
                });
            });

            // Form validation
            const createForm = document.querySelector('#createModuleModal form');
            const editForm = document.querySelector('#editModuleModal form');

            [createForm, editForm].forEach(form => {
                form.addEventListener('submit', function(e) {
                    const code = this.querySelector('input[name="Code"]').value.trim();
                    const name = this.querySelector('input[name="Name"]').value.trim();

                    if (!code || !name) {
                        e.preventDefault();
                        alert('Please fill in all required fields.');
                    }
                });
            });
        });
    </script>
}