@model List<TutorConnect.WebApp.Models.BrowseTutorDTO>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Browse Tutors";

    // Get user role from claims
    var userRole = HttpContextAccessor.HttpContext?.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
    var isStudent = userRole == "Student";
    var isAdmin = userRole == "Admin";
    var isTutor = userRole == "Tutor";

    // Get courses for admin filter (you'll need to pass this from controller)
    var courses = ViewBag.Courses as List<CourseDTO> ?? new List<CourseDTO>();
}

<div class="container mt-5">
    <h2 class="mb-4" style="color: #0B2E3D;">Find Your Perfect Tutor</h2>

    <!-- Course-based filtering info -->
    @if (isStudent)
    {
        <div class="alert alert-info mb-4">
            <i class="fas fa-graduation-cap me-2"></i>
            <strong>Course-based Matching:</strong> You're viewing tutors from your course:
            <span class="fw-bold">@ViewBag.StudentCourse</span>
        </div>
    }

    <!-- Filter Form -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form class="row g-3" method="get" asp-action="Browse" asp-controller="Tutor">
                        <div class="col-md-3">
                            <label class="form-label">Tutor Name</label>
                            <input type="text" class="form-control" name="searchString"
                                   placeholder="Search by tutor name..." value="@Context.Request.Query["searchString"]">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Subject</label>
                            <select class="form-select" name="subject">
                                <option value="">All Subjects</option>
                                @foreach (var subj in ViewBag.Subjects as List<string> ?? new List<string>())
                                {
                                    <option value="@subj" selected="@(Context.Request.Query["subject"] == subj)">@subj</option>
                                }
                            </select>
                        </div>

                        <!-- ADD COURSE FILTER FOR ADMINS -->
                        @if (isAdmin && courses.Any())
                        {
                            <div class="col-md-3">
                                <label class="form-label">Course</label>
                                <select class="form-select" name="courseId">
                                    <option value="">All Courses</option>
                                    @foreach (var course in courses)
                                    {
                                        <option value="@course.CourseId" selected="@(Context.Request.Query["courseId"] == course.CourseId.ToString())">
                                            @course.Title
                                        </option>
                                    }
                                </select>
                            </div>
                        }
                        else
                        {
                            <!-- Hidden column to maintain layout -->
                            <div class="col-md-3"></div>
                        }

                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn w-100" style="background-color: #3BB2B8; color: white; border-radius: 30px;">
                                <i class="fas fa-search me-1"></i> Search
                            </button>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <a href="@Url.Action("Browse")" class="btn btn-outline-secondary w-100" style="border-radius: 30px;">
                                <i class="fas fa-times me-1"></i> Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Role-based message for non-students -->
    @if (!isStudent && User.Identity.IsAuthenticated)
    {
        <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            @if (isAdmin)
            {
                <span>As an administrator, you cannot book tutoring sessions. Switch to a student account to book sessions.</span>
            }
            else if (isTutor)
            {
                <span>As a tutor, you cannot book tutoring sessions. Switch to a student account to book sessions with other tutors.</span>
            }
        </div>
    }

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="text-center py-4 d-none">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading tutors...</span>
        </div>
        <p class="mt-2 text-muted">Finding tutors in your course...</p>
    </div>

    <!-- Results Count -->
    @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]) || !string.IsNullOrEmpty(Context.Request.Query["subject"]) || !string.IsNullOrEmpty(Context.Request.Query["courseId"]))
    {
        <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            Found @Model.Count tutor@(Model.Count != 1 ? "s" : "")

            @if (isAdmin && !string.IsNullOrEmpty(Context.Request.Query["courseId"]))
            {
                var selectedCourse = courses.FirstOrDefault(c => c.CourseId.ToString() == Context.Request.Query["courseId"]);
                if (selectedCourse != null)
                {
                    <span>from <strong>@selectedCourse.Title</strong></span>
                }
            }
            else if (isStudent)
            {
                <span>from your course</span>
            }

            @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]))
            {
                <span>matching "<strong>@Context.Request.Query["searchString"]</strong>"</span>
            }
            @if (!string.IsNullOrEmpty(Context.Request.Query["subject"]))
            {
                <span>teaching <strong>@Context.Request.Query["subject"]</strong></span>
            }
        </div>
    }

    <!-- Tutor Cards -->
    @if (Model.Any())
    {
        <div id="tutorsContainer">
            <div class="row">
                @foreach (var tutor in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div style="height: 8px; background: linear-gradient(90deg, #42E695, #3BB2B8);"></div>
                            <div class="card-body">
                                <div class="d-flex mb-3">
                                    <img src="@tutor.ProfileImageUrl" alt="Tutor" class="rounded-circle" style="width: 70px; height: 70px; object-fit: cover; border: 3px solid #42E695;">
                                    <div class="ms-3">
                                        <h5 style="color: #0B2E3D;">@tutor.FullName</h5>

                                        <!-- ENHANCED COURSE INFO DISPLAY -->
                                        @if (!string.IsNullOrEmpty(tutor.CourseName))
                                        {
                                            <div class="mb-2">
                                                <span class="badge" style="background-color: #0B2E3D; color: white;">
                                                    <i class="fas fa-graduation-cap me-1"></i>@tutor.CourseName
                                                </span>
                                            </div>
                                        }

                                        @foreach (var subject in tutor.Subjects.Take(3))
                                        {
                                            <span class="badge me-1" style="background-color: #3BB2B8;">@subject</span>
                                        }
                                        @if (tutor.Subjects.Count > 3)
                                        {
                                            <span class="badge bg-secondary">+@(tutor.Subjects.Count - 3) more</span>
                                        }
                                </div>
                            </div>

                            <p class="small text-muted mb-3">
                                @(string.IsNullOrEmpty(tutor.AboutMe)
                                                            ? ""
                                                            : (tutor.AboutMe.Length > 100 ? tutor.AboutMe.Substring(0, 100) + "..." : tutor.AboutMe))
                        </p>

                                <!-- Ratings Display -->
                                <div class="mb-3">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <div class="display-4 fw-bold text-primary me-2">@tutor.AverageRating.ToString("0.0")</div>
                                        <div>
                                            <div class="star-rating">
                                        @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fas fa-star @(i <= Math.Round(tutor.AverageRating) ? "text-warning" : "text-muted")"></i>
                                                }
                                            </div>
                                            <small class="text-muted">@tutor.TotalReviews review@(tutor.TotalReviews != 1 ? "s" : "")</small>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    @if (tutor.IsVerified)
                                    {
                                        <span class="badge rounded-pill" style="background-color: #42E695; color: #0B2E3D;">
                                            <i class="fas fa-check-circle me-1"></i> Verified
                                        </span>
                                    }
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a href="/Tutor/Profile/@tutor.TutorId" class="btn btn-sm" style="background-color: #0B2E3D; color: white; border-radius: 30px;">View Profile</a>

                                    @if (isStudent)
                                    {
                                        <!-- Students can book sessions -->
                                        <a href="/Booking/Create/@tutor.TutorId" class="btn btn-sm" style="background-color: #42E695; color: #0B2E3D; font-weight: bold; border-radius: 30px;">Book Session</a>
                                    }
                                    else if (User.Identity.IsAuthenticated)
                                    {
                                        <!-- Disabled button for non-students (Admin/Tutor) -->
                                        <button class="btn btn-sm" style="background-color: #cccccc; color: #666666; border-radius: 30px;" disabled title="Only students can book sessions">
                                            Book Session
                                        </button>
                                    }
                                    else
                                    {
                                        <!-- Not logged in users -->
                                        <a href="/Account/Login" class="btn btn-sm" style="background-color: #42E695; color: #0B2E3D; font-weight: bold; border-radius: 30px;">Login to Book</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]) || !string.IsNullOrEmpty(Context.Request.Query["subject"]) || !string.IsNullOrEmpty(Context.Request.Query["courseId"]))
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No tutors found</h4>
            <p class="text-muted">
                @if (isAdmin && !string.IsNullOrEmpty(Context.Request.Query["courseId"]))
                {
                    var selectedCourse = courses.FirstOrDefault(c => c.CourseId.ToString() == Context.Request.Query["courseId"]);
                    if (selectedCourse != null)
                    {
                        <span>No tutors found in <strong>@selectedCourse.Title</strong> matching your search criteria.</span>
                    }
                }
                else if (isStudent)
                {
                    <span>No tutors from <strong>@ViewBag.StudentCourse</strong> match your search criteria.</span>
                }
                else
                {
                    <span>No tutors match your search criteria.</span>
                }
                Try adjusting your search or <a href="@Url.Action("Browse")">browse all available tutors</a>.
            </p>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No tutors available</h4>
            <p class="text-muted">
                @if (isStudent)
                {
                    <span>There are currently no tutors available for <strong>@ViewBag.StudentCourse</strong>.</span>
                }
                else
                {
                    <span>There are currently no tutors available in the system.</span>
                }
                Check back later or contact your administrator.
            </p>
        </div>
    }
</div>

@section Styles {
    <style>
        .star-rating {
            font-size: 0.9rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
        }

        .card {
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .btn:disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }

        /* Enhanced course badge styling */
        .badge[style*="background-color: #0B2E3D"] {
            font-weight: 500;
            border: 1px solid #0B2E3D;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Show loading indicator on form submission
            const form = document.querySelector('form');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const tutorsContainer = document.getElementById('tutorsContainer');

            if (form && loadingIndicator) {
                form.addEventListener('submit', function() {
                    loadingIndicator.classList.remove('d-none');
                    if (tutorsContainer) {
                        tutorsContainer.style.opacity = '0.5';
                    }
                });
            }

            // Hide loading indicator when page loads (in case of back navigation)
            if (loadingIndicator) {
                loadingIndicator.classList.add('d-none');
            }
            if (tutorsContainer) {
                tutorsContainer.style.opacity = '1';
            }

            // Auto-focus search input
            const searchInput = document.querySelector('input[name="searchString"]');
            if (searchInput && !searchInput.value) {
                searchInput.focus();
            }
        });
    </script>
}