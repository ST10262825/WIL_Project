@model TutorConnect.WebApp.Models.TutorProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="MyProfile" method="post" enctype="multipart/form-data">
    <!-- Hidden field for TutorId -->
    <input type="hidden" asp-for="TutorId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Bio">Bio</label>
        <textarea asp-for="Bio" class="form-control" maxlength="500"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfileImage">Profile Image</label>
        <input asp-for="ProfileImage" type="file" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
        {
            <img src="@Model.ProfileImageUrl" alt="Current Profile Image" style="max-width: 150px; margin-top:10px;" />
        }
    </div>
    <!-- 🔹 About Me -->
    <div class="form-group">
        <label asp-for="AboutMe">About Me</label>
        <textarea asp-for="AboutMe" class="form-control" rows="6" maxlength="2000"
                  placeholder="Write a summary about yourself (up to ~200 words)"></textarea>
        <span asp-validation-for="AboutMe" class="text-danger"></span>
    </div>

    <!-- 🔹 Expertise -->
    <div class="form-group">
        <label asp-for="Expertise">Expertise</label>
        <input asp-for="Expertise" class="form-control"
               placeholder="e.g. Mathematics, Physics, Programming" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>

    <!-- 🔹 Education -->
    <div class="form-group">
        <label asp-for="Education">Education & Qualifications</label>
        <textarea asp-for="Education" class="form-control" rows="4" maxlength="2000"
                  placeholder="List your qualifications, schools, and graduation years"></textarea>
        <span asp-validation-for="Education" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
