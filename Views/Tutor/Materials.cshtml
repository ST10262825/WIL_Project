@model TutorMaterialsOverviewDTO
@{
    ViewData["Title"] = "Learning Materials Management";
    int tutorId = ViewBag.TutorId;
    string tutorName = ViewBag.TutorName;
}

<!-- Add this to your head section or layout -->
<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
<meta http-equiv="Pragma" content="no-cache">
<meta http-equiv="Expires" content="0">

<div class="container mt-4">


    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 style="color: #0B2E3D;">
                    <i class="fas fa-folder-open me-2"></i>Learning Materials
                </h2>
                <div class="btn-group">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#uploadModal">
                        <i class="fas fa-upload me-2"></i>Upload Material
                    </button>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFolderModal">
                        <i class="fas fa-folder-plus me-2"></i>Create Folder
                    </button>
                    <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
            <p class="text-muted">Manage your learning materials and organize them for your students</p>
        </div>
    </div>

    <!-- Add this after the header -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-file fa-2x mb-3" style="color: #42E695;"></i>
                    <h3 class="card-title" style="color: #0B2E3D;">@Model.TotalMaterials</h3>
                    <p class="card-text text-muted">Total Materials</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-folder fa-2x mb-3" style="color: #3BB2B8;"></i>
                    <h3 class="card-title" style="color: #0B2E3D;">@Model.TotalFolders</h3>
                    <p class="card-text text-muted">Folders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-hdd fa-2x mb-3" style="color: #FF6B35;"></i>
                    <h3 class="card-title" style="color: #0B2E3D;">@Model.TotalStorageFormatted</h3>
                    <p class="card-text text-muted">Storage Used</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-users fa-2x mb-3" style="color: #FFD700;"></i>
                    <h3 class="card-title" style="color: #0B2E3D;">@Model.RecentMaterials.Count</h3>
                    <p class="card-text text-muted">Recent Uploads</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Materials -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header" style="background: linear-gradient(90deg, #42E695, #3BB2B8); color: white;">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recently Uploaded Materials</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentMaterials.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Type</th>
                                        <th>Size</th>
                                        <th>Uploaded</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var material in Model.RecentMaterials)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@material.Title</strong>
                                                    <br>
                                                    <small class="text-muted">@material.Description</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@material.FileType.ToUpper()</span>
                                                @if (material.IsPublic)
                                                {
                                                    <span class="badge bg-success">Public</span>
                                                }
                                            </td>
                                            <td>@material.FileSizeFormatted</td>
                                            <td>@material.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@material.FileUrl" class="btn btn-outline-primary" target="_blank">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                    <button class="btn btn-outline-danger delete-material" data-material-id="@material.LearningMaterialId">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-file fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No materials uploaded yet. Start by uploading your first material!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Folder Structure -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header" style="background: #0B2E3D; color: white;">
                    <h5 class="mb-0"><i class="fas fa-folder me-2"></i>Folder Structure</h5>
                </div>
                <div class="card-body">
                    @if (Model.RootFolders.Any())
                    {
                        <div id="folderTree">
                            @foreach (var folder in Model.RootFolders)
                            {
                                @await Html.PartialAsync("_FolderPartial", folder)
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-folder fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No folders created yet. Create your first folder to organize your materials!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Folder Modal -->
<div class="modal fade" id="createFolderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Folder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createFolderForm" asp-action="CreateFolder" method="post">
                <div class="modal-body">
                    <input type="hidden" name="tutorId" value="@tutorId" />
                    <input type="hidden" name="parentFolderId" id="parentFolderId" value="" />

                    <div class="mb-3">
                        <label for="folderName" class="form-label">Folder Name</label>
                        <input type="text" class="form-control" id="folderName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="FolderDescription" class="form-label">Description *</label>
                        <textarea class="form-control" id="FolderDescription" name="description" rows="3" required></textarea>
                        <div class="form-text">A description is required for all materials.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Folder</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Upload Material Modal - FIXED -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Learning Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadMaterialForm" asp-action="UploadMaterial" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="tutorId" value="@tutorId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="materialTitle" class="form-label">Title *</label>
                                <input type="text" class="form-control" id="materialTitle" name="title" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="materialFile" class="form-label">File *</label>
                                <input type="file" class="form-control" id="materialFile" name="file" required>
                                <div class="form-text">Max file size: 10MB. Allowed: PDF, DOC, PPT, Images, Videos</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="materialDescription" class="form-label">Description *</label>
                        <textarea class="form-control" id="materialDescription" name="description" rows="3" required></textarea>
                        <div class="form-text">A description is required for all materials.</div>
                    </div>

                    <div class="mb-3">
                        <label for="targetFolder" class="form-label">Target Folder</label>
                        <select class="form-select" id="targetFolder" name="folderId">
                            <option value="">Root Folder</option>
                            @foreach (var folder in Model.RootFolders)
                            {
                                <option value="@folder.FolderId">@folder.Name</option>
                                @foreach (var subfolder in folder.Subfolders)
                                {
                                    <option value="@subfolder.FolderId">&nbsp;&nbsp;📁 @subfolder.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isPublic" name="isPublic" value="true">
                        <label class="form-check-label" for="isPublic">
                            Make this material publicly accessible
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Upload Material</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        // Handle folder creation - USE CORRECT URL
        document.getElementById('createFolderForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            console.log('Folder creation form submitted');

            const formData = new FormData(this);

            try {
                const response = await fetch('@Url.Action("CreateFolder", "Tutor")', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                console.log('Folder creation response status:', response.status);

                if (response.ok) {
                    console.log('Folder created successfully, reloading...');
                    location.reload();
                } else {
                    const errorText = await response.text();
                    console.error('Folder creation failed:', errorText);
                    alert('Error creating folder: ' + errorText);
                }
            } catch (error) {
                console.error('Folder creation error:', error);
                alert('Error creating folder: ' + error.message);
            }
        });

        
                // Handle material upload - WITH DEBUGGING
                document.getElementById('uploadMaterialForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            console.log('Material upload form submitted');

            const formData = new FormData(this);
            const fileInput = document.getElementById('materialFile');
            const folderSelect = document.getElementById('targetFolder');
            const isPublicCheckbox = document.getElementById('isPublic');

            // Debug all form values
            console.log('=== FORM VALUES DEBUG ===');
            console.log('Title:', document.getElementById('materialTitle').value);
            console.log('Folder Select value:', folderSelect.value);
            console.log('Folder Select text:', folderSelect.options[folderSelect.selectedIndex]?.text);
            console.log('Is Public checkbox checked:', isPublicCheckbox.checked);
            console.log('File selected:', fileInput.files[0]?.name);

            // Log all form data for debugging
            console.log('=== UPLOAD FORM DATA ===');
            for (let [key, value] of formData.entries()) {
                if (key === 'file') {
                    console.log(key + ': ' + value.name + ' (' + value.size + ' bytes)');
                } else {
                    console.log(key + ': ' + value);
                }
            }

            if (!fileInput.files[0]) {
                alert('Please select a file to upload');
                return;
            }

            try {
                const response = await fetch('@Url.Action("UploadMaterial", "Tutor")', {
                    method: 'POST',
                    body: formData
                });

                console.log('Material upload response status:', response.status);

                if (response.ok) {
                    console.log('Material uploaded successfully, reloading...');
                    window.location.href = window.location.href.split('?')[0] + '?t=' + new Date().getTime();
                } else {
                    const errorText = await response.text();
                    console.error('Material upload failed. Status:', response.status, 'Error:', errorText);
                    alert('Error uploading material: ' + errorText);
                }
            } catch (error) {
                console.error('Material upload error:', error);
                alert('Error uploading material: ' + error.message);
            }
        });

        // Handle material deletion - USE CORRECT URL
        document.querySelectorAll('.delete-material').forEach(btn => {
            btn.addEventListener('click', async function() {
                const materialId = this.dataset.materialId;
                console.log('Deleting material:', materialId);

                if (confirm('Are you sure you want to delete this material?')) {
                    try {
                        const formData = new FormData();
                        formData.append('materialId', materialId);
                        formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                        const response = await fetch('@Url.Action("DeleteMaterial", "Tutor")', {
                            method: 'POST',
                            body: formData
                        });

                        if (response.ok) {
                            console.log('Material deleted successfully');
                            location.reload();
                        } else {
                            alert('Error deleting material');
                        }
                    } catch (error) {
                        console.error('Delete error:', error);
                        alert('Error deleting material: ' + error.message);
                    }
                }
            });
        });


                // Handle folder deletion
        document.querySelectorAll('.delete-folder').forEach(btn => {
            btn.addEventListener('click', async function() {
                const folderId = this.dataset.folderId;
                const folderName = this.dataset.folderName;
                const materialCount = this.dataset.materialCount;
                const subfolderCount = this.dataset.subfolderCount;

                console.log('Deleting folder:', folderId, folderName, materialCount, subfolderCount);

                let message = `Are you sure you want to delete the folder "${folderName}"?`;

                if (parseInt(materialCount) > 0 || parseInt(subfolderCount) > 0) {
                    message += `\n\nThis folder contains:\n• ${materialCount} materials\n• ${subfolderCount} subfolders\n\nYou must delete all contents first.`;
                    alert(message);
                    return;
                }

                if (confirm(message)) {
                    try {
                        const formData = new FormData();
                        formData.append('folderId', folderId);
                        formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                        const response = await fetch('@Url.Action("DeleteFolder", "Tutor")', {
                            method: 'POST',
                            body: formData
                        });

                        if (response.ok) {
                            console.log('Folder deleted successfully');
                            location.reload();
                        } else {
                            const errorText = await response.text();
                            alert('Error deleting folder: ' + errorText);
                        }
                    } catch (error) {
                        console.error('Delete folder error:', error);
                        alert('Error deleting folder: ' + error.message);
                    }
                }
            });
        });

       
               // Set parent folder when creating from a specific folder
        function setParentFolder(folderId) {
            console.log('Setting parent folder:', folderId);

            // Only set the dropdown now
            const targetFolderSelect = document.getElementById('targetFolder');
            if (targetFolderSelect) {
                targetFolderSelect.value = folderId;
                console.log('Dropdown set to:', targetFolderSelect.value);
            }
        }
    </script>
}