@model LearningMaterialFolderDTO
@{
    ViewData["Title"] = Model.Name;
    int tutorId = ViewBag.TutorId;
    string tutorName = ViewBag.TutorName;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Materials")">Learning Materials</a></li>
                    <li class="breadcrumb-item active">@Model.Name</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="color: #0B2E3D;">
                    <i class="fas fa-folder me-2"></i>@Model.Name
                </h2>
                <div class="btn-group">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#uploadModal">
                        <i class="fas fa-upload me-2"></i>Upload Material
                    </button>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFolderModal">
                        <i class="fas fa-folder-plus me-2"></i>Create Subfolder
                    </button>
                    <a href="@Url.Action("Materials")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to All Materials
                    </a>
                </div>
            </div>
            <p class="text-muted">@Model.Description</p>
        </div>
    </div>

    <!-- Include the same modals from Materials.cshtml but with parentFolderId pre-set -->
    <!-- Copy the modals from Materials.cshtml and set the hidden fields to Model.FolderId -->
</div>