@model List<TutorConnect.WebApp.Models.BookingDTO>
@{
    ViewData["Title"] = "Tutor Dashboard";

    int unreadMessages = ViewBag.UnreadMessagesCount ?? 0;
    string tutorName = ViewBag.TutorName ?? "Tutor";

    var upcomingSessions = Model?.Where(b => b.StartTime >= DateTime.Today &&
                                           (b.Status == "Accepted" || b.Status == "Pending"))
                                .OrderBy(b => b.StartTime)
                                .ToList() ?? new List<BookingDTO>();

    var pendingBookings = Model?.Count(b => b.Status == "Pending") ?? 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorConnect</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* ===== THEME VARIABLES ===== */
        :root, [data-theme="light"] {
            /* Brand colors */
            --primary-color: #0B2E3D;
            --secondary-color: #3BB2B8;
            --accent-color: #42E695;
            --orange-color: #FF7E36;
            /* Backgrounds */
            --body-bg: #f5f7fa;
            --card-bg: #ffffff;
            --sidebar-bg: #ffffff;
            --hover-bg: #f8f9fa;
            --active-bg: #e8f5fe;
            --session-bg: #f8f9fa;
            /* Text colors */
            --text-primary: #212529;
            --text-secondary: #555555;
            --text-muted: #6c757d;
            /* Borders */
            --border-color: #f1f1f1;
            --border-strong: #dee2e6;
            /* Shadows */
            --shadow-sm: 0 0 20px rgba(0,0,0,0.05);
            --shadow-md: 0 10px 20px rgba(0,0,0,0.1);
            /* Activity colors */
            --activity-bg: #f8f9fa;
            --achievement-color: #FFD700;
            --xp-color: #42E695;
            --level-color: #3BB2B8;
            --session-color: #FF7E36;
            /* Toast backgrounds */
            --toast-achievement-bg: linear-gradient(135deg, #fff9e6, #fff);
            --toast-xp-bg: linear-gradient(135deg, #e8f5e8, #fff);
            --toast-level-bg: linear-gradient(135deg, #e3f2fd, #fff);
            /* Status badges */
            --badge-success-bg: #28a745;
            --badge-warning-bg: #ffc107;
            --badge-warning-text: #000000;
            --badge-danger-bg: #dc3545;
            --badge-primary-bg: #0d6efd;
            --badge-secondary-bg: #6c757d;
            --badge-info-bg: #17a2b8;
        }

        [data-theme="dark"] {
            /* Brand colors - adjusted for dark mode */
            --primary-color: #8BB4C8;
            --secondary-color: #5DD5DB;
            --accent-color: #5FEBA0;
            --orange-color: #FF9A5C;
            /* Backgrounds */
            --body-bg: #121212;
            --card-bg: #1e1e1e;
            --sidebar-bg: #1e1e1e;
            --hover-bg: #2d2d2d;
            --active-bg: #2a4a5a;
            --session-bg: #2d2d2d;
            /* Text colors */
            --text-primary: #ffffff;
            --text-secondary: #b0b0b0;
            --text-muted: #8a8a8a;
            /* Borders */
            --border-color: #404040;
            --border-strong: #4a4a4a;
            /* Shadows */
            --shadow-sm: 0 0 20px rgba(0,0,0,0.3);
            --shadow-md: 0 10px 20px rgba(0,0,0,0.4);
            /* Activity colors - brighter for dark mode */
            --activity-bg: #2d2d2d;
            --achievement-color: #FFD700;
            --xp-color: #5FEBA0;
            --level-color: #5DD5DB;
            --session-color: #FF9A5C;
            /* Toast backgrounds */
            --toast-achievement-bg: linear-gradient(135deg, #3a3520, #2d2d2d);
            --toast-xp-bg: linear-gradient(135deg, #1e3a2d, #2d2d2d);
            --toast-level-bg: linear-gradient(135deg, #1e2f3a, #2d2d2d);
            /* Status badges - adjusted */
            --badge-success-bg: #48bb78;
            --badge-warning-bg: #ed8936;
            --badge-warning-text: #121212;
            --badge-danger-bg: #f56565;
            --badge-primary-bg: #4299e1;
            --badge-secondary-bg: #718096;
            --badge-info-bg: #4299e1;
        }

        /* ===== BASE STYLES ===== */
        body {
            background-color: var(--body-bg);
            color: var(--text-primary);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            background-color: var(--sidebar-bg);
            border-radius: 10px;
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 20px;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                border-bottom: 1px solid var(--border-color);
                position: relative;
            }

                .sidebar-menu li:last-child {
                    border-bottom: none;
                }

            .sidebar-menu a {
                display: flex;
                align-items: center;
                padding: 15px 20px;
                color: var(--text-secondary);
                text-decoration: none;
                transition: all 0.3s;
                justify-content: space-between;
            }

                .sidebar-menu a:hover {
                    background-color: var(--hover-bg);
                    color: var(--orange-color);
                }

                .sidebar-menu a.active {
                    background-color: var(--active-bg);
                    color: var(--orange-color);
                    font-weight: 500;
                    border-left: 4px solid var(--orange-color);
                }

            .sidebar-menu i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        /* ===== PROFILE ===== */
        .profile-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 4px solid var(--accent-color);
            object-fit: cover;
        }

        .sidebar .text-muted {
            color: var(--text-muted) !important;
        }

        /* ===== DASHBOARD HEADER ===== */
        .dashboard-header {
            background-color: var(--card-bg);
            border-radius: 10px;
            box-shadow: var(--shadow-sm);
            position: relative;
            padding: 20px;
            margin-bottom: 20px;
        }

            .dashboard-header h4 {
                color: var(--text-primary);
            }

        /* ===== STATS CARDS ===== */
        .stats-card {
            background: var(--card-bg);
            border-radius: 10px;
            padding: 20px;
            box-shadow: var(--shadow-sm);
            transition: all 0.3s;
            text-align: center;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-md);
            }

            .stats-card h5 {
                color: var(--text-primary);
            }

        .stats-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin: 0 auto 15px auto;
        }

            /* Stats icon colors - keep vibrant in both modes */
            .stats-icon.icon-blue {
                background-color: #e3f2fd;
                color: #1976d2;
            }

            .stats-icon.icon-orange {
                background-color: #fff3e0;
                color: #ff9800;
            }

            .stats-icon.icon-purple {
                background-color: #f3e5f5;
                color: #9c27b0;
            }

            .stats-icon.icon-green {
                background-color: #e8f5e9;
                color: #2e7d32;
            }

        [data-theme="dark"] .stats-icon.icon-blue {
            background-color: #1a2e3f;
            color: #64b5f6;
        }

        [data-theme="dark"] .stats-icon.icon-orange {
            background-color: #3a2e1f;
            color: #ffb74d;
        }

        [data-theme="dark"] .stats-icon.icon-purple {
            background-color: #2e1f3a;
            color: #ba68c8;
        }

        [data-theme="dark"] .stats-icon.icon-green {
            background-color: #1f3a2e;
            color: #66bb6a;
        }

        /* ===== DASHBOARD CARDS ===== */
        .dashboard-card {
            background: var(--card-bg);
            border-radius: 10px;
            padding: 20px;
            box-shadow: var(--shadow-sm);
            margin-bottom: 20px;
        }

            .dashboard-card h5 {
                border-bottom: 1px solid var(--border-color);
                padding-bottom: 10px;
                margin-bottom: 20px;
                font-weight: 600;
                color: var(--text-primary);
                display: flex;
                align-items: center;
            }

                .dashboard-card h5 i {
                    color: var(--orange-color);
                    margin-right: 10px;
                }

            .dashboard-card h6 {
                color: var(--text-primary);
            }

        /* ===== UPCOMING SESSIONS ===== */
        .upcoming-session {
            border-left: 4px solid var(--accent-color);
            margin-bottom: 15px;
            background-color: var(--session-bg);
            border-radius: 5px;
            padding: 15px;
        }

        /* ===== BUTTONS ===== */
        .btn-orange {
            background-color: var(--orange-color);
            color: white;
            border-radius: 30px;
            padding: 8px 20px;
            border: none;
            transition: all 0.3s;
        }

            .btn-orange:hover {
                background-color: #e86c29;
                color: white;
            }

        /* ===== BADGES ===== */
        .badge.bg-success {
            background-color: var(--badge-success-bg) !important;
        }

        .badge.bg-warning {
            background-color: var(--badge-warning-bg) !important;
            color: var(--badge-warning-text) !important;
        }

        .badge.bg-danger {
            background-color: var(--badge-danger-bg) !important;
        }

        .badge.bg-primary {
            background-color: var(--badge-primary-bg) !important;
        }

        .badge.bg-secondary {
            background-color: var(--badge-secondary-bg) !important;
        }

        .badge.bg-info {
            background-color: var(--badge-info-bg) !important;
        }

        /* ===== ALERTS ===== */
        .alert-warning {
            background-color: var(--toast-achievement-bg);
            border-color: var(--badge-warning-bg);
            color: var(--text-primary);
        }

        /* ===== TOAST NOTIFICATIONS ===== */
        .toast-achievement {
            border-left: 4px solid var(--achievement-color);
            background: var(--toast-achievement-bg);
        }

        .toast-xp {
            border-left: 4px solid var(--xp-color);
            background: var(--toast-xp-bg);
        }

        .toast-level-up {
            border-left: 4px solid var(--level-color);
            background: var(--toast-level-bg);
            animation: pulse 2s infinite;
        }

        .toast {
            background-color: var(--card-bg);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }

        .toast-header {
            background-color: var(--card-bg);
            color: var(--text-primary);
            border-bottom: 1px solid var(--border-color);
        }

        .toast-body {
            color: var(--text-primary);
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.02);
        }

        100% {
            transform: scale(1);
        }

        }

        .notification-badge {
            position: absolute;
            top: 8px;
            right: 20px;
            background: #ff4444;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .journey-notification {
            background: linear-gradient(135deg, #FFD700, #FFA500);
        }

        /* ===== ACTIVITY FEED ===== */
        .activity-item {
            background: var(--activity-bg);
            color: var(--text-primary);
            border-radius: 5px;
        }

        .activity-icon-achievement {
            color: var(--achievement-color);
        }

        .activity-icon-xp {
            color: var(--xp-color);
        }

        .activity-icon-level {
            color: var(--level-color);
        }

        .activity-icon-session {
            color: var(--session-color);
        }

        /* ===== EMPTY STATES ===== */
        .empty-state {
            color: var(--text-muted);
        }

        /* ===== COURSE BADGE ===== */
        .course-badge {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            border-radius: 20px;
            padding: 4px 12px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        /* ===== FORM ELEMENTS ===== */
        .form-check-input {
            background-color: var(--card-bg);
            border-color: var(--border-strong);
        }

            .form-check-input:checked {
                background-color: var(--badge-success-bg);
                border-color: var(--badge-success-bg);
            }

        .form-check-label {
            color: var(--text-primary);
        }

        /* ===== BOOTSTRAP OVERRIDES ===== */
        .text-muted {
            color: var(--text-muted) !important;
        }

        small.text-muted {
            color: var(--text-muted) !important;
        }

        .btn-outline-secondary {
            color: var(--text-secondary);
            border-color: var(--border-strong);
        }

            .btn-outline-secondary:hover {
                background-color: var(--hover-bg);
                color: var(--text-primary);
                border-color: var(--border-strong);
            }

        .spinner-border {
            color: var(--primary-color) !important;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-4">
                <div class="sidebar">
                    <div class="p-4 text-center">
                        <img src="@ViewBag.TutorProfileImageUrl" alt="Profile" class="profile-image">
                        <h5 class="mt-3 mb-1">@ViewBag.TutorName</h5>
                        <p class="text-muted mb-0">@ViewBag.TutorBio</p>
                        @if (!string.IsNullOrEmpty(ViewBag.CourseName))
                        {
                            <div class="mt-2">
                                <span class="badge bg-primary">
                                    <i class="fas fa-book me-1"></i>
                                    @ViewBag.CourseName
                                </span>
                            </div>
                        }
                    </div>
                    <ul class="sidebar-menu">
                        <li><a href="#" class="active"><span><i class="fas fa-tachometer-alt"></i> Dashboard</span></a></li>
                        <li><a href="/Tutor/MyProfile"><span><i class="fas fa-user"></i> My Profile</span></a></li>
                        <li>
                            <a href="/Tutor/MySessions">
                                <span><i class="fas fa-calendar-check me-1"></i> My Sessions</span>
                                @if (pendingBookings > 0)
                                {
                                    <span class="badge bg-danger rounded-pill">@pendingBookings</span>
                                }
                            </a>
                        </li>
                        <li>
                            <a href="/Tutor/Materials">
                                <span><i class="fas fa-folder-open me-1"></i> Learning Materials</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Profile", "Gamification")">
                                <span><i class="fas fa-trophy me-1"></i> My Journey</span>
                                <span id="achievementNotification" class="notification-badge journey-notification d-none">0</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Tutor/Chat">
                                <span><i class="fas fa-comment-dots"></i> Messages</span>
                                @if (unreadMessages > 0)
                                {
                                    <span class="badge bg-danger rounded-pill">@unreadMessages</span>
                                }
                            </a>
                        </li>
                        <li>
                            <a href="/Tutor/Settings">
                                <span><i class="fas fa-cog"></i> Settings</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                <!-- Dashboard Header -->
                <div class="dashboard-header">
                    <div class="profile-info">
                        <h4>Welcome back, @tutorName!</h4>
                        <p class="text-muted mb-0">Here's what's happening with your tutoring business today.</p>

                        <div class="mt-2">
                            @if (!string.IsNullOrEmpty(ViewBag.CourseName))
                            {
                                <span class="badge bg-info">
                                    <i class="fas fa-graduation-cap me-1"></i>
                                    Teaching: @ViewBag.CourseName
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Not assigned to course
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon icon-blue"><i class="fas fa-book"></i></div>
                            <h5 class="mb-0" id="upcomingCount">@upcomingSessions.Count</h5>
                            <p class="text-muted mb-0">Upcoming Sessions</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon icon-orange"><i class="fas fa-users"></i></div>
                            <h5 class="mb-0">@(Model?.Select(b => b.StudentId).Distinct().Count() ?? 0)</h5>
                            <p class="text-muted mb-0">Total Students</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon icon-purple"><i class="fas fa-hourglass-half"></i></div>
                            <h5 class="mb-0" id="pendingCount">@pendingBookings</h5>
                            <p class="text-muted mb-0">Pending Bookings</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon icon-green"><i class="fas fa-check-circle"></i></div>
                            <h5 class="mb-0" id="completedCount">@(Model?.Count(b => b.Status == "Completed") ?? 0)</h5>
                            <p class="text-muted mb-0">Completed Sessions</p>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Sessions -->
                <div class="dashboard-card">
                    <h5><i class="fas fa-calendar-check"></i> Upcoming Sessions</h5>

                    @if (!upcomingSessions.Any())
                    {
                        <div class="text-center py-4 empty-state">
                            <i class="fas fa-calendar-times" style="font-size: 3rem; opacity: 0.3;"></i>
                            <p class="mt-3 mb-0">No upcoming sessions scheduled.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var session in upcomingSessions)
                        {
                            <div class="upcoming-session" id="session_@session.BookingId">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6>@session.ModuleName</h6>
                                        <p class="text-muted mb-0">With @session.StudentName</p>
                                        <small class="text-muted">
                                            @session.StartTime.ToString("MMM dd, yyyy") at @session.StartTime.ToString("h:mm tt") - @session.EndTime.ToString("h:mm tt")
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge @(session.StartTime.Date == DateTime.Today ? "bg-success" : "bg-secondary")">
                                            @(session.StartTime.Date == DateTime.Today ? "Today" : session.StartTime.ToString("MMM dd"))
                                        </span>
                                        <br />
                                        <span class="badge session-status @(session.Status == "Pending" ? "bg-warning text-dark" : session.Status == "Accepted" ? "bg-primary" : session.Status == "Declined" ? "bg-danger" : session.Status == "Completed" ? "bg-success" : "bg-secondary")">
                                            @session.Status
                                        </span>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    @if (session.Status == "Pending")
                                    {
                                        <div class="pending-actions">
                                            <button type="button" class="btn btn-success btn-sm me-1 update-status-btn"
                                                    data-booking-id="@session.BookingId" data-status="Accepted">
                                                <i class="fas fa-check me-1"></i> Accept
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm me-1 update-status-btn"
                                                    data-booking-id="@session.BookingId" data-status="Declined">
                                                <i class="fas fa-times me-1"></i> Decline
                                            </button>
                                        </div>
                                    }
                                    else if (session.Status == "Accepted")
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input complete-session-checkbox"
                                                   type="checkbox"
                                                   id="completeCheck_@session.BookingId"
                                                   data-booking-id="@session.BookingId" />
                                            <label class="form-check-label" for="completeCheck_@session.BookingId">
                                                Mark as Complete
                                            </label>
                                        </div>
                                    }
                                    <a href="/Tutor/Chat?studentId=@session.StudentId" class="btn btn-outline-secondary btn-sm mt-2">
                                        <i class="fas fa-comment me-1"></i> Message
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Recent Activity Panel -->
                <div class="dashboard-card">
                    <h5><i class="fas fa-bell"></i> Recent Activity</h5>
                    <div id="recentActivity">
                        <div class="text-center py-3">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pending Bookings Section -->
                @if (pendingBookings > 0)
                {
                    <div class="dashboard-card">
                        <h5><i class="fas fa-clock"></i> Pending Approval (@pendingBookings)</h5>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            You have @pendingBookings booking(s) waiting for your approval.
                        </div>
                        <a href="#upcoming-sessions" class="btn btn-orange">
                            <i class="fas fa-check-circle me-1"></i> Review Bookings
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Toast Notifications Container -->
    <div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
   



    <script>
        $(document).ready(function () {
            loadRecentActivity();
            checkNewAchievements();
            setInterval(checkNewAchievements, 30000);

            function showAchievementNotification(achievementName, description, iconUrl) {
                const toastHtml = `
                    <div class="toast toast-achievement" role="alert" data-bs-delay="10000">
                        <div class="toast-header">
                            <i class="fas fa-trophy text-warning me-2"></i>
                            <strong class="me-auto">Achievement Unlocked!</strong>
                            <small>Just now</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">
                            <div class="d-flex align-items-center">
                                <img src="${iconUrl || '/images/achievements/default.png'}"
                                     class="rounded me-3" style="width: 40px; height: 40px;"
                                     alt="${achievementName}">
                                <div>
                                    <h6 class="mb-1">${achievementName}</h6>
                                    <p class="mb-0 text-muted small">${description}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                $('#toastContainer').append(toastHtml);
                new bootstrap.Toast($('#toastContainer .toast').last()[0]).show();
            }

            function showXPNotification(points, reason) {
                const toastHtml = `
                    <div class="toast toast-xp" role="alert" data-bs-delay="8000">
                        <div class="toast-header">
                            <i class="fas fa-star text-success me-2"></i>
                            <strong class="me-auto">XP Earned!</strong>
                            <small>Just now</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h6 class="mb-1">+${points} XP</h6>
                                    <p class="mb-0 text-muted small">${reason}</p>
                                </div>
                                <i class="fas fa-arrow-up text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                `;
                $('#toastContainer').append(toastHtml);
                new bootstrap.Toast($('#toastContainer .toast').last()[0]).show();
            }

            function showLevelUpNotification(newLevel) {
                const toastHtml = `
                    <div class="toast toast-level-up" role="alert" data-bs-delay="15000">
                        <div class="toast-header">
                            <i class="fas fa-arrow-up text-primary me-2"></i>
                            <strong class="me-auto">Level Up! 🎉</strong>
                            <small>Congratulations!</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body text-center">
                            <div class="level-badge mb-2"
                                 style="width: 60px; height: 60px; background: linear-gradient(135deg, #42E695, #3BB2B8);
                                        border-radius: 50%; display: inline-flex; align-items: center;
                                        justify-content: center; font-size: 1.5rem; font-weight: bold; color: white;">
                                ${newLevel}
                            </div>
                            <h5 class="mb-1">You reached Level ${newLevel}!</h5>
                            <p class="mb-0 text-muted">Keep up the great work!</p>
                        </div>
                    </div>
                `;
                $('#toastContainer').append(toastHtml);
                new bootstrap.Toast($('#toastContainer .toast').last()[0]).show();
            }

            function checkNewAchievements() {
                $.get('/api/gamification/recent-achievements', function(data) {
                    if (data.newAchievements > 0) {
                        updateAchievementBadge(data.newAchievements);
                        if (data.achievements && data.achievements.length > 0) {
                            data.achievements.forEach(achievement => {
                                showAchievementNotification(
                                    achievement.name,
                                    achievement.description,
                                    achievement.iconUrl
                                );
                            });
                        }
                    }
                }).fail(function() {
                    console.log('Could not check for new achievements');
                });
            }

            function updateAchievementBadge(count) {
                const badge = $('#achievementNotification');
                if (count > 0) {
                    badge.removeClass('d-none').text(count);
                } else {
                    badge.addClass('d-none');
                }
            }

            function loadRecentActivity() {
                setTimeout(() => {
                    const activities = [
                        { type: 'session', message: 'Completed session with John Doe', points: 50, timestamp: new Date(Date.now() - 300000) },
                        { type: 'achievement', message: 'Unlocked "Dedicated Learner"', points: null, timestamp: new Date(Date.now() - 600000) },
                        { type: 'xp', message: 'Daily login bonus', points: 10, timestamp: new Date(Date.now() - 86400000) }
                    ];

                    const container = $('#recentActivity');
                    container.empty();

                    if (activities.length === 0) {
                        container.html('<p class="text-muted text-center py-3">No recent activity</p>');
                        return;
                    }

                    activities.forEach(activity => {
                        const activityHtml = `
                            <div class="d-flex align-items-center mb-3 p-2 rounded activity-item">
                                <div class="flex-shrink-0">
                                    <i class="fas ${getActivityIcon(activity.type)} me-3 activity-icon-${activity.type}"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1 small">${activity.message}</p>
                                    <small class="text-muted">${formatTime(activity.timestamp)}</small>
                                </div>
                                ${activity.points ? `<span class="badge bg-success">+${activity.points} XP</span>` : ''}
                            </div>
                        `;
                        container.append(activityHtml);
                    });
                }, 1000);
            }

            function getActivityIcon(type) {
                const icons = {
                    'achievement': 'fa-trophy',
                    'xp': 'fa-star',
                    'level': 'fa-arrow-up',
                    'session': 'fa-calendar-check'
                };
                return icons[type] || 'fa-bell';
            }

            function formatTime(timestamp) {
                const now = new Date();
                const diff = now - new Date(timestamp);
                const minutes = Math.floor(diff / 60000);
                const hours = Math.floor(diff / 3600000);
                const days = Math.floor(diff / 86400000);

                if (minutes < 1) return 'Just now';
                if (minutes < 60) return `${minutes}m ago`;
                if (hours < 24) return `${hours}h ago`;
                return `${days}d ago`;
            }

                    function updateStats(upcomingDelta, pendingDelta, completedDelta) {
            let upcomingCount = parseInt($("#upcomingCount").text()) + upcomingDelta;
            $("#upcomingCount").text(upcomingCount);

            let pendingCount = parseInt($("#pendingCount").text()) + pendingDelta;
            $("#pendingCount").text(pendingCount);

            let completedCount = parseInt($("#completedCount").text()) + completedDelta;
            $("#completedCount").text(completedCount);

            // FIX: Target only the sessions badge, not all bg-danger badges
            const sidebarPendingBadge = $(".sidebar-menu a[href='/Tutor/MySessions'] .badge.bg-danger");
            if (sidebarPendingBadge.length > 0) {
                const newPendingCount = parseInt(sidebarPendingBadge.text()) + pendingDelta;
                if (newPendingCount > 0) {
                    sidebarPendingBadge.text(newPendingCount);
                } else {
                    sidebarPendingBadge.remove();
                }
            }
        }

            $(".update-status-btn").click(function () {
                const button = $(this);
                const bookingId = button.data("booking-id");
                const status = button.data("status");

                if (status === "Declined") {
                    if (!confirm("Are you sure you want to decline this booking?")) {
                        return;
                    }
                }

                $.ajax({
                    url: '/Booking/UpdateBookingStatus',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val(),
                        'Content-Type': 'application/json'
                    },
                    data: JSON.stringify({
                        bookingId: bookingId,
                        status: status
                    }),
                    success: function (response) {
                        const sessionDiv = $("#session_" + bookingId);
                        const badge = sessionDiv.find(".session-status");
                        const actionsDiv = sessionDiv.find(".pending-actions");

                        badge.text(status)
                             .removeClass("bg-warning bg-primary bg-danger bg-success bg-secondary")
                             .addClass("badge " +
                                (status === "Pending" ? "bg-warning text-dark" :
                                 status === "Accepted" ? "bg-primary" :
                                 status === "Declined" ? "bg-danger" :
                                 status === "Completed" ? "bg-success" : "bg-secondary"));

                        actionsDiv.remove();

                        if (status === "Declined" || status === "Completed") {
                            sessionDiv.remove();
                        }

                        const upcomingDelta = (status === "Declined" || status === "Completed") ? -1 : 0;
                        const pendingDelta = (status === "Accepted" || status === "Declined") ? -1 : 0;
                        const completedDelta = (status === "Completed") ? 1 : 0;

                        updateStats(upcomingDelta, pendingDelta, completedDelta);

                        if (status === "Completed") {
                            showXPNotification(50, "Completed a tutoring session");
                        }

                        alert("Booking status updated successfully!");
                    },
                    error: function (xhr, status, error) {
                        console.error("Error updating status:", error);
                        alert("Failed to update booking status. Please try again.");
                    }
                });
            });

            $(".complete-session-checkbox").change(function () {
                const checkbox = $(this);
                const bookingId = checkbox.data("booking-id");

                if (checkbox.is(":checked")) {
                    $.ajax({
                        url: '/Booking/UpdateBookingStatus',
                        type: 'POST',
                        headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                        contentType: 'application/json',
                        data: JSON.stringify({ bookingId: bookingId, status: "Completed" }),
                        success: function () {
                            const sessionDiv = $("#session_" + bookingId);
                            sessionDiv.remove();
                            updateStats(-1, 0, 1);
                            showXPNotification(50, "Completed a tutoring session");
                            alert("Session marked as completed!");
                        },
                        error: function () {
                            alert("Failed to update session status.");
                            checkbox.prop("checked", false);
                        }
                    });
                }
            });
        });
    </script>
