@model List<TutorConnect.WebApp.Models.BookingDTO>
@{
    ViewData["Title"] = "Tutor Dashboard";

    int unreadMessages = ViewBag.UnreadMessagesCount ?? 0;
    string tutorName = ViewBag.TutorName ?? "Tutor";

    // FIX: Add status filter to only include Accepted and Pending sessions
    var upcomingSessions = Model?.Where(b => b.StartTime >= DateTime.Today &&
                                           (b.Status == "Accepted" || b.Status == "Pending"))
                                .OrderBy(b => b.StartTime)
                                .ToList() ?? new List<BookingDTO>();

    var pendingBookings = Model?.Count(b => b.Status == "Pending") ?? 0;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorConnect</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #0B2E3D;
            --secondary-color: #3BB2B8;
            --accent-color: #42E695;
            --orange-color: #FF7E36;
            --light-bg: #f9f9f9;
        }

        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            position: sticky;
            top: 20px;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                border-bottom: 1px solid #f1f1f1;
                position: relative;
            }

                .sidebar-menu li:last-child {
                    border-bottom: none;
                }

            .sidebar-menu a {
                display: flex;
                align-items: center;
                padding: 15px 20px;
                color: #555;
                text-decoration: none;
                transition: all 0.3s;
                justify-content: space-between;
            }

                .sidebar-menu a:hover {
                    background-color: #f8f9fa;
                    color: var(--orange-color);
                }

                .sidebar-menu a.active {
                    background-color: #e8f5fe;
                    color: var(--orange-color);
                    font-weight: 500;
                    border-left: 4px solid var(--orange-color);
                }

            .sidebar-menu i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .profile-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 4px solid var(--accent-color);
            object-fit: cover;
        }

        .dashboard-header {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            position: relative;
            padding: 20px;
            margin-bottom: 20px;
        }

        .stats-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            transition: all 0.3s;
            text-align: center;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .stats-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin: 0 auto 15px auto;
        }

        .dashboard-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            margin-bottom: 20px;
        }

            .dashboard-card h5 {
                border-bottom: 1px solid #f1f1f1;
                padding-bottom: 10px;
                margin-bottom: 20px;
                font-weight: 600;
                color: var(--primary-color);
                display: flex;
                align-items: center;
            }

                .dashboard-card h5 i {
                    color: var(--orange-color);
                    margin-right: 10px;
                }

        .upcoming-session {
            border-left: 4px solid var(--accent-color);
            margin-bottom: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 15px;
        }

        .btn-orange {
            background-color: var(--orange-color);
            color: white;
            border-radius: 30px;
            padding: 8px 20px;
            border: none;
            transition: all 0.3s;
        }

            .btn-orange:hover {
                background-color: #e86c29;
                color: white;
            }

        /* Toast Notifications */
        .toast-achievement {
            border-left: 4px solid #FFD700;
            background: linear-gradient(135deg, #fff9e6, #fff);
        }

        .toast-xp {
            border-left: 4px solid #42E695;
            background: linear-gradient(135deg, #e8f5e8, #fff);
        }

        .toast-level-up {
            border-left: 4px solid #3BB2B8;
            background: linear-gradient(135deg, #e3f2fd, #fff);
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.02);
        }

        100% {
            transform: scale(1);
        }

        }

        .notification-badge {
            position: absolute;
            top: 8px;
            right: 20px;
            background: #ff4444;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .journey-notification {
            background: linear-gradient(135deg, #FFD700, #FFA500);
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-4">
                <div class="sidebar">
                    <div class="p-4 text-center">
                        <img src="@ViewBag.TutorProfileImageUrl" alt="Profile" class="profile-image">
                        <h5 class="mt-3 mb-1">@ViewBag.TutorName</h5>
                        <p class="text-muted mb-0">@ViewBag.TutorBio</p>
                    </div>
                    <ul class="sidebar-menu">
                        <li><a href="#" class="active"><span><i class="fas fa-tachometer-alt"></i> Dashboard</span></a></li>
                        <li><a href="/Tutor/MyProfile"><span><i class="fas fa-user"></i> My Profile</span></a></li>
                        <li>
                            <a href="/Tutor/MySessions">
                                <span><i class="fas fa-calendar-check me-1"></i> My Sessions</span>
                                @if (pendingBookings > 0)
                                {
                                    <span class="badge bg-danger rounded-pill">@pendingBookings</span>
                                }
                            </a>
                        </li>
                        <!-- ADD LEARNING MATERIALS TAB HERE -->
                        <li>
                            <a href="/Tutor/Materials">
                                <span><i class="fas fa-folder-open me-1"></i> Learning Materials</span>
                                @* Optional: Add badge for new materials count if needed *@
                                @* <span class="badge bg-primary rounded-pill">3</span> *@
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Profile", "Gamification")">
                                <span><i class="fas fa-trophy me-1"></i> My Journey</span>
                                <span id="achievementNotification" class="notification-badge journey-notification d-none">0</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Tutor/Chat">
                                <span><i class="fas fa-comment-dots"></i> Messages</span>
                                @if (unreadMessages > 0)
                                {
                                    <span class="badge bg-danger rounded-pill">@unreadMessages</span>
                                }
                            </a>
                        </li>
                        <li><a href="#"><span><i class="fas fa-cog"></i> Settings</span></a></li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                <!-- Dashboard Header -->
                <div class="dashboard-header">
                    <div class="profile-info">
                        <h4>Welcome back, @tutorName!</h4>
                        <p class="text-muted mb-0">Here's what's happening with your tutoring business today.</p>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #e3f2fd; color: #1976d2;"><i class="fas fa-book"></i></div>
                            <h5 class="mb-0" id="upcomingCount">@upcomingSessions.Count</h5>
                            <p class="text-muted mb-0">Upcoming Sessions</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #fff3e0; color: #ff9800;"><i class="fas fa-users"></i></div>
                            <h5 class="mb-0">@(Model?.Select(b => b.StudentId).Distinct().Count() ?? 0)</h5>
                            <p class="text-muted mb-0">Total Students</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #f3e5f5; color: #9c27b0;"><i class="fas fa-hourglass-half"></i></div>
                            <h5 class="mb-0" id="pendingCount">@pendingBookings</h5>
                            <p class="text-muted mb-0">Pending Bookings</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #e8f5e9; color: #2e7d32;"><i class="fas fa-check-circle"></i></div>
                            <h5 class="mb-0" id="completedCount">@(Model?.Count(b => b.Status == "Completed") ?? 0)</h5>
                            <p class="text-muted mb-0">Completed Sessions</p>
                        </div>
                    </div>
                </div>

                

                <!-- Upcoming Sessions -->
                <div class="dashboard-card">
                    <h5><i class="fas fa-calendar-check"></i> Upcoming Sessions</h5>

                    @if (!upcomingSessions.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
                            <p class="text-muted mt-3 mb-0">No upcoming sessions scheduled.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var session in upcomingSessions)
                        {
                            <div class="upcoming-session" id="session_@session.BookingId">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6>@session.ModuleName</h6>
                                        <p class="text-muted mb-0">With @session.StudentName</p>
                                        <small class="text-muted">
                                            @session.StartTime.ToString("MMM dd, yyyy") at @session.StartTime.ToString("h:mm tt") - @session.EndTime.ToString("h:mm tt")
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge @(session.StartTime.Date == DateTime.Today ? "bg-success" : "bg-secondary")">
                                            @(session.StartTime.Date == DateTime.Today ? "Today" : session.StartTime.ToString("MMM dd"))
                                        </span>
                                        <br />
                                        <span class="badge session-status
                                    @(session.Status == "Pending" ? "bg-warning text-dark" :
                                                                                                                  session.Status == "Accepted" ? "bg-primary" :
                                                                                                                  session.Status == "Declined" ? "bg-danger" :
                                                                                                                  session.Status == "Completed" ? "bg-success" : "bg-secondary")">
                                    @session.Status
                                </span>
                            </div>
                        </div>

                                <div class="mt-3">
                            @if (session.Status == "Pending")
                                    {
                                        <div class="pending-actions">
                                            <button type="button" class="btn btn-success btn-sm me-1 update-status-btn"
                                                    data-booking-id="@session.BookingId" data-status="Accepted">
                                                <i class="fas fa-check me-1"></i> Accept
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm me-1 update-status-btn"
                                                    data-booking-id="@session.BookingId" data-status="Declined">
                                                <i class="fas fa-times me-1"></i> Decline
                                            </button>
                                        </div>
                                    }

                                    else if (session.Status == "Accepted")
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input complete-session-checkbox"
                                                   type="checkbox"
                                                   id="completeCheck_@session.BookingId"
                                                   data-booking-id="@session.BookingId" />
                                            <label class="form-check-label" for="completeCheck_@session.BookingId">
                                                Mark as Complete
                                            </label>
                                        </div>
                                    }
                                    <a href="/Tutor/Chat?studentId=@session.StudentId" class="btn btn-outline-secondary btn-sm mt-2">
                                        <i class="fas fa-comment me-1"></i> Message
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Recent Activity Panel -->
                <div class="dashboard-card">
                    <h5><i class="fas fa-bell"></i> Recent Activity</h5>
                    <div id="recentActivity">
                        <div class="text-center py-3">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pending Bookings Section -->
                @if (pendingBookings > 0)
                {
                    <div class="dashboard-card">
                        <h5><i class="fas fa-clock"></i> Pending Approval (@pendingBookings)</h5>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            You have @pendingBookings booking(s) waiting for your approval.
                        </div>
                        <a href="#upcoming-sessions" class="btn btn-orange">
                            <i class="fas fa-check-circle me-1"></i> Review Bookings
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Toast Notifications Container -->
    <div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    
    <script>
        $(document).ready(function () {
            // Load recent activity and check for new achievements
            loadRecentActivity();
            checkNewAchievements();

            // Set up polling for new achievements (every 30 seconds)
            setInterval(checkNewAchievements, 30000);

            // Notification functions
                    function showAchievementNotification(achievementName, description, iconUrl) {
            const toastHtml = `
                <div class="toast toast-achievement" role="alert" data-bs-delay="10000"> <!-- Changed from 5000 to 10000 (10 seconds) -->
                    <div class="toast-header">
                        <i class="fas fa-trophy text-warning me-2"></i>
                        <strong class="me-auto">Achievement Unlocked!</strong>
                        <small>Just now</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        <div class="d-flex align-items-center">
                            <img src="${iconUrl || '/images/achievements/default.png'}"
                                 class="rounded me-3" style="width: 40px; height: 40px;"
                                 alt="${achievementName}">
                            <div>
                                <h6 class="mb-1">${achievementName}</h6>
                                <p class="mb-0 text-muted small">${description}</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            $('#toastContainer').append(toastHtml);
            new bootstrap.Toast($('#toastContainer .toast').last()[0]).show();
        }

        function showXPNotification(points, reason) {
            const toastHtml = `
                <div class="toast toast-xp" role="alert" data-bs-delay="8000"> <!-- Changed from 3000 to 8000 (8 seconds) -->
                    <div class="toast-header">
                        <i class="fas fa-star text-success me-2"></i>
                        <strong class="me-auto">XP Earned!</strong>
                        <small>Just now</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <h6 class="mb-1">+${points} XP</h6>
                                <p class="mb-0 text-muted small">${reason}</p>
                            </div>
                            <i class="fas fa-arrow-up text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            `;

            $('#toastContainer').append(toastHtml);
            new bootstrap.Toast($('#toastContainer .toast').last()[0]).show();
        }

        function showLevelUpNotification(newLevel) {
            const toastHtml = `
                <div class="toast toast-level-up" role="alert" data-bs-delay="15000"> <!-- Changed from 7000 to 15000 (15 seconds) -->
                    <div class="toast-header">
                        <i class="fas fa-arrow-up text-primary me-2"></i>
                        <strong class="me-auto">Level Up! 🎉</strong>
                        <small>Congratulations!</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body text-center">
                        <div class="level-badge mb-2"
                             style="width: 60px; height: 60px; background: linear-gradient(135deg, #42E695, #3BB2B8);
                                    border-radius: 50%; display: inline-flex; align-items: center;
                                    justify-content: center; font-size: 1.5rem; font-weight: bold; color: white;">
                            ${newLevel}
                        </div>
                        <h5 class="mb-1">You reached Level ${newLevel}!</h5>
                        <p class="mb-0 text-muted">Keep up the great work!</p>
                    </div>
                </div>
            `;

            $('#toastContainer').append(toastHtml);
            new bootstrap.Toast($('#toastContainer .toast').last()[0]).show();
        }

            // Check for new achievements
            function checkNewAchievements() {
                $.get('/api/gamification/recent-achievements', function(data) {
                    if (data.newAchievements > 0) {
                        updateAchievementBadge(data.newAchievements);

                        // Show toast for each new achievement
                        if (data.achievements && data.achievements.length > 0) {
                            data.achievements.forEach(achievement => {
                                showAchievementNotification(
                                    achievement.name,
                                    achievement.description,
                                    achievement.iconUrl
                                );
                            });
                        }
                    }
                }).fail(function() {
                    console.log('Could not check for new achievements');
                });
            }

            // Update achievement notification badge
            function updateAchievementBadge(count) {
                const badge = $('#achievementNotification');
                if (count > 0) {
                    badge.removeClass('d-none').text(count);
                } else {
                    badge.addClass('d-none');
                }
            }

            // Load recent activity
            function loadRecentActivity() {
                // Simulate API call - replace with actual API endpoint
                setTimeout(() => {
                    const activities = [
                        { type: 'session', message: 'Completed session with John Doe', points: 50, timestamp: new Date(Date.now() - 300000) },
                        { type: 'achievement', message: 'Unlocked "Dedicated Learner"', points: null, timestamp: new Date(Date.now() - 600000) },
                        { type: 'xp', message: 'Daily login bonus', points: 10, timestamp: new Date(Date.now() - 86400000) }
                    ];

                    const container = $('#recentActivity');
                    container.empty();

                    if (activities.length === 0) {
                        container.html('<p class="text-muted text-center py-3">No recent activity</p>');
                        return;
                    }

                    activities.forEach(activity => {
                        const activityHtml = `
                            <div class="d-flex align-items-center mb-3 p-2 rounded" style="background: #f8f9fa;">
                                <div class="flex-shrink-0">
                                    <i class="fas ${getActivityIcon(activity.type)} me-3"
                                       style="color: ${getActivityColor(activity.type)}"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1 small">${activity.message}</p>
                                    <small class="text-muted">${formatTime(activity.timestamp)}</small>
                                </div>
                                ${activity.points ? `<span class="badge bg-success">+${activity.points} XP</span>` : ''}
                            </div>
                        `;
                        container.append(activityHtml);
                    });
                }, 1000);
            }

            function getActivityIcon(type) {
                const icons = {
                    'achievement': 'fa-trophy',
                    'xp': 'fa-star',
                    'level': 'fa-arrow-up',
                    'session': 'fa-calendar-check'
                };
                return icons[type] || 'fa-bell';
            }

            function getActivityColor(type) {
                const colors = {
                    'achievement': '#FFD700',
                    'xp': '#42E695',
                    'level': '#3BB2B8',
                    'session': '#FF7E36'
                };
                return colors[type] || '#6c757d';
            }

            function formatTime(timestamp) {
                const now = new Date();
                const diff = now - new Date(timestamp);
                const minutes = Math.floor(diff / 60000);
                const hours = Math.floor(diff / 3600000);
                const days = Math.floor(diff / 86400000);

                if (minutes < 1) return 'Just now';
                if (minutes < 60) return `${minutes}m ago`;
                if (hours < 24) return `${hours}h ago`;
                return `${days}d ago`;
            }

            // Demo notifications (remove in production)
            setTimeout(() => {
                // Uncomment to test notifications
                // showXPNotification(50, "Completed a tutoring session");
                // showAchievementNotification("First Session", "Complete your first tutoring session", "/images/achievements/first-session.png");
            }, 2000);

            // Existing booking management functions
            function updateStats(upcomingDelta, pendingDelta, completedDelta) {
                let upcomingCount = parseInt($("#upcomingCount").text()) + upcomingDelta;
                $("#upcomingCount").text(upcomingCount);

                let pendingCount = parseInt($("#pendingCount").text()) + pendingDelta;
                $("#pendingCount").text(pendingCount);

                let completedCount = parseInt($("#completedCount").text()) + completedDelta;
                $("#completedCount").text(completedCount);

                const sidebarPendingBadge = $(".sidebar-menu .badge.bg-danger");
                if (sidebarPendingBadge.length > 0) {
                    const newPendingCount = parseInt(sidebarPendingBadge.text()) + pendingDelta;
                    if (newPendingCount > 0) {
                        sidebarPendingBadge.text(newPendingCount);
                    } else {
                        sidebarPendingBadge.remove();
                    }
                }
            }

            // Accept / Decline buttons
            $(".update-status-btn").click(function () {
                const button = $(this);
                const bookingId = button.data("booking-id");
                const status = button.data("status");

                if (status === "Declined") {
                    if (!confirm("Are you sure you want to decline this booking?")) {
                        return;
                    }
                }

                $.ajax({
                    url: '/Booking/UpdateBookingStatus',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val(),
                        'Content-Type': 'application/json'
                    },
                    data: JSON.stringify({
                        bookingId: bookingId,
                        status: status
                    }),
                    success: function (response) {
                        const sessionDiv = $("#session_" + bookingId);
                        const badge = sessionDiv.find(".session-status");
                        const actionsDiv = sessionDiv.find(".pending-actions");

                        badge.text(status)
                             .removeClass("bg-warning bg-primary bg-danger bg-success bg-secondary")
                             .addClass("badge " +
                                (status === "Pending" ? "bg-warning text-dark" :
                                 status === "Accepted" ? "bg-primary" :
                                 status === "Declined" ? "bg-danger" :
                                 status === "Completed" ? "bg-success" : "bg-secondary"));

                        actionsDiv.remove();

                        if (status === "Declined" || status === "Completed") {
                            sessionDiv.remove();
                        }

                        const upcomingDelta = (status === "Declined" || status === "Completed") ? -1 : 0;
                        const pendingDelta = (status === "Accepted" || status === "Declined") ? -1 : 0;
                        const completedDelta = (status === "Completed") ? 1 : 0;

                        updateStats(upcomingDelta, pendingDelta, completedDelta);

                        // Show XP notification when session is completed
                        if (status === "Completed") {
                            showXPNotification(50, "Completed a tutoring session");
                        }

                        alert("Booking status updated successfully!");
                    },
                    error: function (xhr, status, error) {
                        console.error("Error updating status:", error);
                        alert("Failed to update booking status. Please try again.");
                    }
                });
            });

            // Mark Complete checkbox
            $(".complete-session-checkbox").change(function () {
                const checkbox = $(this);
                const bookingId = checkbox.data("booking-id");

                if (checkbox.is(":checked")) {
                    $.ajax({
                        url: '/Booking/UpdateBookingStatus',
                        type: 'POST',
                        headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                        contentType: 'application/json',
                        data: JSON.stringify({ bookingId: bookingId, status: "Completed" }),
                        success: function () {
                            const sessionDiv = $("#session_" + bookingId);
                            sessionDiv.remove();
                            updateStats(-1, 0, 1);

                            // Show XP notification
                            showXPNotification(50, "Completed a tutoring session");

                            alert("Session marked as completed!");
                        },
                        error: function () {
                            alert("Failed to update session status.");
                            checkbox.prop("checked", false);
                        }
                    });
                }
            });
        });
    </script>
</body>
