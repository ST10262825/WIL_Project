@model List<TutorConnect.WebApp.Models.BookingDTO>
@{
    ViewData["Title"] = "Tutor Dashboard";
    int unreadMessages = ViewBag.UnreadMessagesCount ?? 0;
    string tutorName = ViewBag.TutorName ?? "Tutor";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorConnect</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #0B2E3D;
            --secondary-color: #3BB2B8;
            --accent-color: #42E695;
            --orange-color: #FF7E36;
            --light-bg: #f9f9f9;
        }

        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            position: sticky;
            top: 20px;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                border-bottom: 1px solid #f1f1f1;
            }

                .sidebar-menu li:last-child {
                    border-bottom: none;
                }

            .sidebar-menu a {
                display: flex;
                align-items: center;
                padding: 15px 20px;
                color: #555;
                text-decoration: none;
                transition: all 0.3s;
                justify-content: space-between;
            }

                .sidebar-menu a:hover {
                    background-color: #f8f9fa;
                    color: var(--orange-color);
                }

                .sidebar-menu a.active {
                    background-color: #e8f5fe;
                    color: var(--orange-color);
                    font-weight: 500;
                    border-left: 4px solid var(--orange-color);
                }

            .sidebar-menu i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .profile-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 4px solid var(--accent-color);
            object-fit: cover;
        }

        .image-upload {
            position: relative;
            width: 100px;
            height: 100px;
            margin: 0 auto;
        }

            .image-upload input {
                position: absolute;
                opacity: 0;
                width: 100%;
                height: 100%;
                cursor: pointer;
            }

        .upload-overlay {
            position: absolute;
            bottom: 0;
            right: 0;
            background-color: var(--secondary-color);
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            cursor: pointer;
        }

        .dashboard-header {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            position: relative;
            padding: 20px;
            margin-bottom: 20px;
        }

        .profile-completion {
            position: absolute;
            right: 20px;
            top: 20px;
        }

        .stats-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            transition: all 0.3s;
            text-align: center;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .stats-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin: 0 auto 15px auto;
        }

        .dashboard-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            margin-bottom: 20px;
        }

            .dashboard-card h5 {
                border-bottom: 1px solid #f1f1f1;
                padding-bottom: 10px;
                margin-bottom: 20px;
                font-weight: 600;
                color: var(--primary-color);
                display: flex;
                align-items: center;
            }

                .dashboard-card h5 i {
                    color: var(--orange-color);
                    margin-right: 10px;
                }

        .upcoming-session {
            border-left: 4px solid var(--accent-color);
            padding-left: 15px;
            margin-bottom: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 15px;
        }

        .progress {
            height: 10px;
            border-radius: 5px;
        }

        .btn-orange {
            background-color: var(--orange-color);
            color: white;
            border-radius: 30px;
            padding: 8px 20px;
            border: none;
            transition: all 0.3s;
        }

            .btn-orange:hover {
                background-color: #e86c29;
                color: white;
            }

        .btn-sm {
            border-radius: 20px;
            padding: 5px 15px;
        }

        .badge {
            font-size: 0.75rem;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-4">
                <div class="sidebar">
                    <div class="p-4 text-center">
                        <div class="image-upload">
                            <img src="@ViewBag.TutorProfileImageUrl" alt="Profile" class="profile-image">
                            <input type="file" id="profileImageUpload">
                            <div class="upload-overlay">
                                <i class="fas fa-camera"></i>
                            </div>
                        </div>
                        <h5 class="mt-3 mb-1">@ViewBag.TutorName</h5>
                        <p class="text-muted mb-0">@ViewBag.TutorBio</p>
                    </div>
                    <ul class="sidebar-menu">
                        <li>
                            <a href="#" class="active">
                                <span><i class="fas fa-tachometer-alt"></i> Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Tutor/MyProfile">
                                <span><i class="fas fa-user"></i> My Profile</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span><i class="fas fa-calendar-alt"></i> Schedule</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span><i class="fas fa-users"></i> My Students</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Tutor/Chat">
                                <span><i class="fas fa-comment-dots"></i> Messages</span>
                                @if (unreadMessages > 0)
                                {
                                    <span class="badge bg-danger rounded-pill">@unreadMessages</span>
                                }
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span><i class="fas fa-cog"></i> Settings</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                <!-- Dashboard Header -->
                <div class="dashboard-header">
                    <div class="profile-completion">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <small class="text-muted">Profile Completion</small>
                                <div class="progress mt-1" style="width: 150px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 80%"></div>
                                </div>
                            </div>
                            <h5 class="mb-0">80%</h5>
                        </div>
                        <small class="text-muted">Complete your profile to attract more students</small>
                    </div>
                    <div class="profile-header">
                        <div class="profile-info">
                            <h4>Welcome back, @tutorName!</h4>
                            <p class="text-muted mb-0">Here's what's happening with your tutoring business today.</p>
                        </div>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #e3f2fd; color: #1976d2;">
                                <i class="fas fa-book"></i>
                            </div>
                            <h5 class="mb-0">@Model.Count(b => b.SessionDate >= DateTime.Today)</h5>
                            <p class="text-muted mb-0">Active Sessions</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #fff3e0; color: #ff9800;">
                                <i class="fas fa-users"></i>
                            </div>
                            <h5 class="mb-0">@Model.Select(b => b.StudentId).Distinct().Count()</h5>
                            <p class="text-muted mb-0">Total Students</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #f3e5f5; color: #9c27b0;">
                                <i class="fas fa-hourglass-half"></i>
                            </div>
                            <h5 class="mb-0">@Model.Count(b => b.Status == "Pending")</h5>
                            <p class="text-muted mb-0">Pending Bookings</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stats-card">
                            <div class="stats-icon" style="background-color: #e8f5e9; color: #2e7d32;">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <h5 class="mb-0">@Model.Count(b => b.Status == "Completed")</h5>
                            <p class="text-muted mb-0">Completed Sessions</p>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Sessions -->
                <div class="dashboard-card">
                    <h5><i class="fas fa-calendar-check"></i> Upcoming Sessions</h5>

                    @if (!Model.Any(b => b.SessionDate >= DateTime.Today))
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
                            <p class="text-muted mt-3 mb-0">No upcoming sessions scheduled.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var session in Model.Where(b => b.SessionDate >= DateTime.Today).OrderBy(b => b.SessionDate))
                        {
                            <div class="upcoming-session">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@session.ModuleName</h6>
                                        <p class="text-muted mb-0">With @session.StudentName</p>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge @(session.SessionDate.Date == DateTime.Today ? "bg-success" : "bg-secondary")">
                                            @(session.SessionDate.Date == DateTime.Today ? "Today" : session.SessionDate.ToString("MMM dd"))
                                        </span><br>
                                        <small class="text-muted">@session.SessionDate.ToString("HH:mm")</small>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    @if (session.Status == "Pending")
                                    {
                                        <form asp-action="UpdateBookingStatus" method="post" style="display:inline">
                                            <input type="hidden" name="bookingId" value="@session.BookingId" />
                                            <input type="hidden" name="status" value="Accepted" />
                                            <button type="submit" class="btn btn-success btn-sm me-1">
                                                <i class="fas fa-check me-1"></i> Accept
                                            </button>
                                        </form>
                                        <form asp-action="UpdateBookingStatus" method="post" style="display:inline">
                                            <input type="hidden" name="bookingId" value="@session.BookingId" />
                                            <input type="hidden" name="status" value="Declined" />
                                            <button type="submit" class="btn btn-danger btn-sm me-1">
                                                <i class="fas fa-times me-1"></i> Decline
                                            </button>
                                        </form>
                                    }
                                    <a href="/Tutor/Chat" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-comment me-1"></i> Message
                                    </a>
                                </div>
                            </div>
                        }
                    }

                    <div class="text-center mt-3">
                        <a href="#" class="btn btn-sm btn-outline-primary">View All Sessions</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</body>
</html>