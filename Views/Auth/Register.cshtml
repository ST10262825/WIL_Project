@model RegisterStudentDTO
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div style="height: 30px; background: linear-gradient(90deg, #42E695, #3BB2B8);"></div>
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="/images/Logo.jpg" alt="TutorConnect Logo" style="height: 100px;">
                        <h3 class="mt-3" style="color: #0B2E3D;">Create Your Account</h3>
                        <p class="text-muted">Join TutorConnect and start learning today</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Full Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Course" class="form-label"></label>
                                <input asp-for="Course" class="form-control" placeholder="Course of study" />
                                <span asp-validation-for="Course" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn w-100 mb-3" style="background-color: #3BB2B8; color: white; border-radius: 30px;">
                            Create Student Account
                        </button>

                        <div class="text-center">
                            <p class="mb-0">
                                Already have an account?
                                <a asp-controller="Auth" asp-action="Login" style="color:#3BB2B8; font-weight:500;">Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
