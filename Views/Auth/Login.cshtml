@model LoginDTO
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div style="height: 8px; background: linear-gradient(90deg, #42E695, #3BB2B8);"></div>
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="/images/Logo.jpg" alt="TutorConnect Logo" style="height: 60px;">
                        <h3 class="mt-3" style="color: #0B2E3D;">Welcome Back</h3>
                        <p class="text-muted">Log in to continue your learning journey</p>

                        <!-- NEW: Daily Login Reward -->
                        <div class="alert alert-warning border-0" style="background: #FFF3CD;">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-fire me-2" style="color: #FF6B35;"></i>
                                <span class="small"><strong>Daily Login Bonus:</strong> Earn +10 XP for logging in today!</span>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            <i class="fas fa-trophy me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #f8f9fa; border-right: none;">
                                    <i class="fas fa-envelope" style="color: #3BB2B8;"></i>
                                </span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="name@vcconnect.edu.za" style="border-left: none;" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #f8f9fa; border-right: none;">
                                    <i class="fas fa-lock" style="color: #3BB2B8;"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" style="border-left: none;" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                            <a href="#" class="float-end" style="color: #3BB2B8;">Forgot password?</a>
                        </div>

                        <button type="submit" class="btn w-100 mb-3" style="background-color: #0B2E3D; color: white; border-radius: 30px;">
                            <i class="fas fa-sign-in-alt me-2"></i>Login & Earn Daily Bonus
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p>
                            Don't have an account?
                            <a asp-controller="Auth" asp-action="Register" style="color: #42E695; font-weight:500;">
                                Join now and earn rewards!
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}