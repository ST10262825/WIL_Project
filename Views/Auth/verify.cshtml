@{
    ViewBag.Title = "Verify Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div style="height: 8px; background: linear-gradient(90deg, #42E695, #3BB2B8);"></div>
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope-circle-check fa-3x" style="color: #3BB2B8;"></i>
                        <h3 class="mt-3" style="color: #0B2E3D;">Verify Your Email</h3>
                        <p class="text-muted">Almost there! Enter the verification code sent to <strong>@ViewBag.Email</strong></p>

                        <!-- NEW: Points Reward Info -->
                        <div class="alert alert-success border-0" style="background: #E8F5E8;">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-gift me-2" style="color: #42E695;"></i>
                                <span class="small"><strong>+50 XP</strong> reward after verification!</span>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form method="post">
                        <input type="hidden" name="email" value="@ViewBag.Email" />

                        <div class="mb-3">
                            <label class="form-label">Verification Code</label>
                            <input name="token" class="form-control form-control-lg text-center"
                                   placeholder="Enter 6-digit code"
                                   style="font-size: 1.2rem; letter-spacing: 2px;"
                                   required maxlength="6" />
                            <small class="text-muted">Check your email for the 6-digit verification code</small>
                        </div>

                        <button type="submit" class="btn w-100 mb-3" style="background-color: #42E695; color: white; border-radius: 30px;">
                            <i class="fas fa-check-circle me-2"></i>Verify & Earn Points
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="small text-muted">
                            Didn't receive the code?
                            <a href="#" style="color: #3BB2B8;">Resend verification code</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>