@model CourseDetailsViewModel
@{
    ViewData["Title"] = "Course Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">@Model.Course.Title</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Courses
        </a>
    </div>

    <!-- Course Info Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="card-title mb-0">Course Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Description</h6>
                            <p class="text-muted">@(Model.Course.Description ?? "No description provided")</p>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-4 text-center">
                                    <div class="h4 text-primary mb-0">@Model.Course.ModuleCount</div>
                                    <small class="text-muted">Modules</small>
                                </div>
                                <div class="col-4 text-center">
                                    <div class="h4 text-success mb-0">@Model.Course.TutorCount</div>
                                    <small class="text-muted">Tutors</small>
                                </div>
                                <div class="col-4 text-center">
                                    <div class="h4 text-info mb-0">@Model.Course.StudentCount</div>
                                    <small class="text-muted">Students</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modules Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Modules in this Course</h5>
                    <span class="badge bg-primary">@Model.Modules.Count</span>
                </div>
                <div class="card-body">
                    @if (Model.Modules.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var module in Model.Modules)
                                    {
                                        <tr>
                                            <td><strong>@module.Code</strong></td>
                                            <td>@module.Name</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No modules assigned to this course yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Tutors Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Course Tutors</h5>
                    <span class="badge bg-success">@Model.Tutors.Count</span>
                </div>
                <div class="card-body">
                    @if (Model.Tutors.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var tutor in Model.Tutors)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@tutor.Name @tutor.Surname</h6>
                                        <small class="text-muted">@tutor.Email</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@tutor.Modules.Count module@(tutor.Modules.Count != 1 ? "s" : "")</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No tutors assigned to this course yet.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Students Section -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Enrolled Students</h5>
                    <span class="badge bg-info">@Model.Students.Count</span>
                </div>
                <div class="card-body">
                    @if (Model.Students.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var student in Model.Students)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@student.Name</h6>
                                   
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No students enrolled in this course yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>